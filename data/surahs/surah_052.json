{
  "surah_id": 52,
  "verses": {
    "0": {
      "arabic_text": "بِسْمِ اللّٰهِ الرَّحْمٰنِ الرَّحِیْمِ",
      "bangla_trans": "পরম করুণাময় মেহেরবান আল্লাহর নামে",
      "english_trans": "In the name of Allah, the Beneficent, the Merciful."
    },
    "1": {
      "arabic_text": "وَالطُّورِ",
      "bangla_trans": "তূরের শপথ।",
      "word_by_word": {
        "1": {
          "words_ar": "وَالطُّورِ",
          "translate_bn": "শপথ তূর (পাহাড়ের)"
        }
      },
      "english_trans": "I swear by the Mountain,"
    },
    "2": {
      "arabic_text": "وَكِتَابٍ مَسْطُورٍ",
      "bangla_trans": "এবং এমন একখানা খোলা গ্রন্থের শপথ",
      "word_by_word": {
        "1": {
          "words_ar": "وَكِتَابٍ",
          "translate_bn": "এবং (শপথ) কিতাবের"
        },
        "2": {
          "words_ar": "مَسْطُورٍ",
          "translate_bn": "(যা) লিখিত"
        }
      },
      "english_trans": "And the Book written"
    },
    "3": {
      "arabic_text": "فِي رَقٍّ مَنْشُورٍ",
      "bangla_trans": "যা সূক্ষ্ম চামড়ার ওপর লিখিত।",
      "word_by_word": {
        "1": {
          "words_ar": "فِي",
          "translate_bn": "মধ্যে"
        },
        "2": {
          "words_ar": "رَقٍّ",
          "translate_bn": "চামড়ার কাগজের"
        },
        "3": {
          "words_ar": "مَنْشُورٍ",
          "translate_bn": "উন্মুক্ত"
        }
      },
      "english_trans": "In an outstretched fine parchment,"
    },
    "4": {
      "arabic_text": "وَالْبَيْتِ الْمَعْمُورِ",
      "bangla_trans": "আর শপথ আবাদ ঘরের,",
      "word_by_word": {
        "1": {
          "words_ar": "وَالْبَيْتِ",
          "translate_bn": "এবং (শপথ) ঘরের"
        },
        "2": {
          "words_ar": "الْمَعْمُورِ",
          "translate_bn": "চির আবাদ"
        }
      },
      "english_trans": "And the House (Kaaba) that is visited,"
    },
    "5": {
      "arabic_text": "وَالسَّقْفِ الْمَرْفُوعِ",
      "bangla_trans": "সুউচ্চ ছাদের",
      "word_by_word": {
        "1": {
          "words_ar": "وَالسَّقْفِ",
          "translate_bn": "এবং (শপথ) ছাদের (অর্থাৎ আকাশের)"
        },
        "2": {
          "words_ar": "الْمَرْفُوعِ",
          "translate_bn": "সুউচ্চ"
        }
      },
      "english_trans": "And the elevated canopy"
    },
    "6": {
      "arabic_text": "وَالْبَحْرِ الْمَسْجُورِ",
      "bangla_trans": "এবং তরঙ্গ বিক্ষুব্ধ সমুদ্রের।",
      "word_by_word": {
        "1": {
          "words_ar": "وَالْبَحْرِ",
          "translate_bn": "এবং (শপথ) সাগরের"
        },
        "2": {
          "words_ar": "الْمَسْجُورِ",
          "translate_bn": "উত্তাল"
        }
      },
      "english_trans": "And the swollen sea"
    },
    "7": {
      "arabic_text": "إِنَّ عَذَابَ رَبِّكَ لَوَاقِعٌ",
      "bangla_trans": "তোমার রবের আযাব অবশ্যই আপতিত হবে",
      "word_by_word": {
        "1": {
          "words_ar": "إِنَّ",
          "translate_bn": "নিশ্চয়ই"
        },
        "2": {
          "words_ar": "عَذَابَ",
          "translate_bn": "শাস্তি"
        },
        "3": {
          "words_ar": "رَبِّكَ",
          "translate_bn": "তোমার রবের"
        },
        "4": {
          "words_ar": "لَوَاقِعٌ",
          "translate_bn": "অবশ্যই ঘটবে"
        }
      },
      "english_trans": "Most surely the punishment of your Lord will come to pass;"
    },
    "8": {
      "arabic_text": "مَا لَهُ مِنْ دَافِعٍ",
      "bangla_trans": "যার রোধকারী কেউ নেই।",
      "word_by_word": {
        "1": {
          "words_ar": "مَا",
          "translate_bn": "নেই"
        },
        "2": {
          "words_ar": "لَهُ",
          "translate_bn": "তার জন্যে"
        },
        "3": {
          "words_ar": "مِنْ",
          "translate_bn": "কোনো"
        },
        "4": {
          "words_ar": "دَافِعٍ",
          "translate_bn": "প্রতিরোধকারী"
        }
      },
      "english_trans": "There shall be none to avert it;"
    },
    "9": {
      "arabic_text": "يَوْمَ تَمُورُ السَّمَاءُ مَوْرًا",
      "bangla_trans": "তা ঘটবে সেদিন, যেদিন আসমান প্রচণ্ডভাবে দুলিত হবে",
      "word_by_word": {
        "1": {
          "words_ar": "يَوْمَ",
          "translate_bn": "সেদিন"
        },
        "2": {
          "words_ar": "تَمُورُ",
          "translate_bn": "কাঁপবে"
        },
        "3": {
          "words_ar": "السَّمَاءُ",
          "translate_bn": "আকাশ"
        },
        "4": {
          "words_ar": "مَوْرًا",
          "translate_bn": "প্রবল কম্পনে"
        }
      },
      "english_trans": "On the day when the heaven shall move from side to side"
    },
    "10": {
      "arabic_text": "وَتَسِيرُ الْجِبَالُ سَيْرًا",
      "bangla_trans": "এবং পাহাড় শূন্যে উড়তে থাকবে। ",
      "word_by_word": {
        "1": {
          "words_ar": "وَتَسِيرُ",
          "translate_bn": "এবং চলবে"
        },
        "2": {
          "words_ar": "الْجِبَالُ",
          "translate_bn": "পাহাড়গুলো"
        },
        "3": {
          "words_ar": "سَيْرًا",
          "translate_bn": "(দ্রুত) চলার মতো"
        }
      },
      "english_trans": "And the mountains shall pass away passing away (altogether)."
    },
    "11": {
      "arabic_text": "فَوَيْلٌ يَوْمَئِذٍ لِلْمُكَذِّبِينَ",
      "bangla_trans": "ধ্বংস রয়েছে সেদিন সেসব অস্বীকারকারীদের জন্য",
      "word_by_word": {
        "1": {
          "words_ar": "فَوَيْلٌ",
          "translate_bn": "অতঃপর দুর্ভোগ"
        },
        "2": {
          "words_ar": "يَوْمَئِذٍ",
          "translate_bn": "সেদিন"
        },
        "3": {
          "words_ar": "لِلْمُكَذِّبِينَ",
          "translate_bn": "মিথ্যারোপকারীদের জন্যে"
        }
      },
      "english_trans": "So woe on that day to those who reject (the truth),"
    },
    "12": {
      "arabic_text": "الَّذِينَ هُمْ فِي خَوْضٍ يَلْعَبُونَ",
      "bangla_trans": "যারা আজ, তামাসাচ্ছলে নিজেদের যুক্তি-প্রমাণ উপস্থাপনে ব্যস্ত আছে।",
      "word_by_word": {
        "1": {
          "words_ar": "الَّذِينَ",
          "translate_bn": "যারা (এমন যে)"
        },
        "2": {
          "words_ar": "هُمْ",
          "translate_bn": "তারা"
        },
        "3": {
          "words_ar": "فِي",
          "translate_bn": "মধ্যে"
        },
        "4": {
          "words_ar": "خَوْضٍ",
          "translate_bn": "অর্থহীন যুক্তি প্রদানের"
        },
        "5": {
          "words_ar": "يَلْعَبُونَ",
          "translate_bn": "খেলায় মেতে আছে"
        }
      },
      "english_trans": "Those who sport entering into vain discourses."
    },
    "13": {
      "arabic_text": "يَوْمَ يُدَعُّونَ إِلَى نَارِ جَهَنَّمَ دَعًّا",
      "bangla_trans": "যেদিন তাদের ধাক্কা দিতে দিতে জাহান্নামের দিকে নিয়ে যাওয়া হবে",
      "word_by_word": {
        "1": {
          "words_ar": "يَوْمَ",
          "translate_bn": "সেদিন"
        },
        "2": {
          "words_ar": "يُدَعُّونَ",
          "translate_bn": "তাদেরকে ধাক্কা দেওয়া হবে"
        },
        "3": {
          "words_ar": "إِلَىٰ",
          "translate_bn": "দিকে"
        },
        "4": {
          "words_ar": "نَارِ",
          "translate_bn": "আগুনের"
        },
        "5": {
          "words_ar": "جَهَنَّمَ",
          "translate_bn": "জাহান্নামের"
        },
        "6": {
          "words_ar": "دَعًّا",
          "translate_bn": "জোর ধাক্কা"
        }
      },
      "english_trans": "The day on which they shall be driven away to the fire of hell with violence."
    },
    "14": {
      "arabic_text": "هَذِهِ النَّارُ الَّتِي كُنْتُمْ بِهَا تُكَذِّبُونَ",
      "bangla_trans": "সেদিন তাদের বলা হবে এতো সেই আগুন যা তোমরা মিথ্যা প্রতিপন্ন করতে।",
      "word_by_word": {
        "1": {
          "words_ar": "هَٰذِهِ",
          "translate_bn": "(বলা হবে) সেই এই"
        },
        "2": {
          "words_ar": "النَّارُ",
          "translate_bn": "আগুন"
        },
        "3": {
          "words_ar": "الَّتِي",
          "translate_bn": "যা"
        },
        "4": {
          "words_ar": "كُنْتُمْ",
          "translate_bn": "তোমরা ছিলে"
        },
        "5": {
          "words_ar": "بِهَا",
          "translate_bn": "সে বিষয়ে"
        },
        "6": {
          "words_ar": "تُكَذِّبُونَ",
          "translate_bn": "মিথ্যা মনে করতে"
        }
      },
      "english_trans": "This is the fire which you used to give the lie to."
    },
    "15": {
      "arabic_text": "أَفَسِحْرٌ هَذَا أَمْ أَنْتُمْ لَا تُبْصِرُونَ",
      "bangla_trans": "এখন বলো, এটা কি যাদু না এখনো তোমরা উপলব্ধি করতে পারছো না?",
      "word_by_word": {
        "1": {
          "words_ar": "أَفَسِحْرٌ",
          "translate_bn": "জাদু তবে কি"
        },
        "2": {
          "words_ar": "هَٰذَا",
          "translate_bn": "এটা"
        },
        "3": {
          "words_ar": "أَمْ",
          "translate_bn": "নাকি"
        },
        "4": {
          "words_ar": "أَنْتُمْ",
          "translate_bn": "তোমরা"
        },
        "5": {
          "words_ar": "لَا",
          "translate_bn": "না"
        },
        "6": {
          "words_ar": "تُبْصِرُونَ",
          "translate_bn": "চোখে দেখছ"
        }
      },
      "english_trans": "Is it magic then or do you not see?"
    },
    "16": {
      "arabic_text": "اصْلَوْهَا فَاصْبِرُوا أَوْ لَا تَصْبِرُوا سَوَاءٌ عَلَيْكُمْ إِنَّمَا تُجْزَوْنَ مَا كُنْتُمْ تَعْمَلُونَ",
      "bangla_trans": "যাও, এখন এর মধ্যে ঢুকে দগ্ধ হতে থাকো। তোমরা ধৈর্য্য ধর আর না ধর, এখন উভয়টিই তোমাদের জন্য সমান। তোমরা যেমন কাজ করে এসেছো ঠিক তেমন প্রতিদানই তোমাদের দেয়া হচ্ছে।",
      "word_by_word": {
        "1": {
          "words_ar": "اصْلَوْهَا",
          "translate_bn": "তাতে তোমরা প্রবেশ করো"
        },
        "2": {
          "words_ar": "فَاصْبِرُوا",
          "translate_bn": "অতঃপর তোমরা সহ্য করতে পার"
        },
        "3": {
          "words_ar": "أَوْ",
          "translate_bn": "বা"
        },
        "4": {
          "words_ar": "لَا",
          "translate_bn": "না"
        },
        "5": {
          "words_ar": "تَصْبِرُوا",
          "translate_bn": "তোমরা সহ্য করতে পার"
        },
        "6": {
          "words_ar": "سَوَاءٌ",
          "translate_bn": "(সবই) সমান"
        },
        "7": {
          "words_ar": "عَلَيْكُمْ",
          "translate_bn": "তোমাদের জন্যে"
        },
        "8": {
          "words_ar": "إِنَّمَا",
          "translate_bn": "প্রকৃতপক্ষে (আজ)"
        },
        "9": {
          "words_ar": "تُجْزَوْنَ",
          "translate_bn": "তোমাদেরকে প্রতিফল দেয়া হচ্ছে"
        },
        "10": {
          "words_ar": "مَا",
          "translate_bn": "যা"
        },
        "11": {
          "words_ar": "كُنْتُمْ",
          "translate_bn": "তোমরা ছিলে"
        },
        "12": {
          "words_ar": "تَعْمَلُونَ",
          "translate_bn": "কাজ করছ"
        }
      },
      "english_trans": "Enter into it, then bear (it) patiently, or do not bear (it) patiently, it is the same to you; you shall be requited only (for) what you did."
    },
    "17": {
      "arabic_text": "إِنَّ الْمُتَّقِينَ فِي جَنَّاتٍ وَنَعِيمٍ",
      "bangla_trans": "মুত্তাকীরা সেখানে বাগান ও নিয়ামতসমূহের মধ্যে অবস্থান করবে",
      "word_by_word": {
        "1": {
          "words_ar": "إِنَّ",
          "translate_bn": "নিশ্চয়ই"
        },
        "2": {
          "words_ar": "الْمُتَّقِينَ",
          "translate_bn": "মুত্তাকীরা (অবস্থিত হবে)"
        },
        "3": {
          "words_ar": "فِي",
          "translate_bn": "মধ্যে"
        },
        "4": {
          "words_ar": "جَنَّاتٍ",
          "translate_bn": "জান্নাতের"
        },
        "5": {
          "words_ar": "وَنَعِيمٍ",
          "translate_bn": "ও আরাম আয়েশে"
        }
      },
      "english_trans": "Surely those who guard (against evil) shall be in gardens and bliss"
    },
    "18": {
      "arabic_text": "فَاكِهِينَ بِمَا آتَاهُمْ رَبُّهُمْ وَوَقَاهُمْ رَبُّهُمْ عَذَابَ الْجَحِيمِ",
      "bangla_trans": "এবং তাদের রব তাদের যা কিছু দান করবেন তা মজা করে উপভোগ করতে থাকবে। আর তাদের রব তাদেরকে দোযখের আযাব থেকে বাঁচিয়ে নেবেন।",
      "word_by_word": {
        "1": {
          "words_ar": "فَاكِهِينَ",
          "translate_bn": "সানন্দে উপভোগকারী হবে তারা"
        },
        "2": {
          "words_ar": "بِمَا",
          "translate_bn": "ঐ জিনিসের যা"
        },
        "3": {
          "words_ar": "آتَاهُمْ",
          "translate_bn": "তাদের দান করবেন"
        },
        "4": {
          "words_ar": "رَبُّهُمْ",
          "translate_bn": "তাদের রব"
        },
        "5": {
          "words_ar": "وَوَقَاهُمْ",
          "translate_bn": "এবং তাদের রক্ষা করবেন"
        },
        "6": {
          "words_ar": "رَبُّهُمْ",
          "translate_bn": "তাদের রব"
        },
        "7": {
          "words_ar": "عَذَابَ",
          "translate_bn": "শাস্তি (হতে)"
        },
        "8": {
          "words_ar": "الْجَحِيمِ",
          "translate_bn": "জাহান্নামের"
        }
      },
      "english_trans": "Rejoicing because of what their Lord gave them, and their Lord saved them from the punishment of the burning fire."
    },
    "19": {
      "arabic_text": "كُلُوا وَاشْرَبُوا هَنِيئًا بِمَا كُنْتُمْ تَعْمَلُونَ",
      "bangla_trans": "(তাদেরকে বলা হবে) তোমরা যেসব কাজ করে এসেছো তার বিনিময়ে মজা করে পানাহার করো।",
      "word_by_word": {
        "1": {
          "words_ar": "كُلُوا",
          "translate_bn": "(বলা হবে) তোমরা খাও"
        },
        "2": {
          "words_ar": "وَاشْرَبُوا",
          "translate_bn": "ও তোমরা পান করো"
        },
        "3": {
