{
  "surah_id": 68,
  "verses": {
    "0": {
      "arabic_text": "بِسْمِ اللّٰهِ الرَّحْمٰنِ الرَّحِیْمِ",
      "bangla_trans": "পরম করুণাময় মেহেরবান আল্লাহর নামে",
      "english_trans": "In the name of Allah, the Beneficent, the Merciful."
    },
    "1": {
      "arabic_text": "ن وَالْقَلَمِ وَمَا يَسْطُرُونَ",
      "bangla_trans": "নূন, শপথ কলমের এবং লেখকরা যা লিখে চলেছে তার।",
      "word_by_word": {
        "1": {
          "words_ar": "ن",
          "translate_bn": "নুন"
        },
        "2": {
          "words_ar": "وَالْقَلَمِ",
          "translate_bn": "কলমের শপথ"
        },
        "3": {
          "words_ar": "وَمَا",
          "translate_bn": "এবং যা"
        },
        "4": {
          "words_ar": "يَسْطُرُونَ",
          "translate_bn": "তারা লিখছে"
        }
      },
      "english_trans": "Noon. I swear by the pen and what the angels write,"
    },
    "2": {
      "arabic_text": "مَا أَنْتَ بِنِعْمَةِ رَبِّكَ بِمَجْنُونٍ",
      "bangla_trans": "তোমার রবের অনুগ্রহে তুমি পাগল নও।",
      "word_by_word": {
        "1": {
          "words_ar": "مَا",
          "translate_bn": "না"
        },
        "2": {
          "words_ar": "أَنْتَ",
          "translate_bn": "তুমি"
        },
        "3": {
          "words_ar": "بِنِعْمَةِ",
          "translate_bn": "অনুগ্রহে"
        },
        "4": {
          "words_ar": "رَبِّكَ",
          "translate_bn": "তোমার রবের"
        },
        "5": {
          "words_ar": "بِمَجْنُونٍ",
          "translate_bn": "পাগল"
        }
      },
      "english_trans": "By the grace of your Lord you are not mad."
    },
    "3": {
      "arabic_text": "وَإِنَّ لَكَ لَأَجْرًا غَيْرَ مَمْنُونٍ",
      "bangla_trans": "আর নিশ্চিতভাবেই তোমার জন্য এমন পুরস্কার রয়েছে যা কখনো ফুরাবে না।",
      "word_by_word": {
        "1": {
          "words_ar": "وَإِنَّ",
          "translate_bn": "এবং নিশ্চয়"
        },
        "2": {
          "words_ar": "لَكَ",
          "translate_bn": "তোমার জন্য"
        },
        "3": {
          "words_ar": "لَأَجْرًا",
          "translate_bn": "অবশ্যই(আছে) পুরস্কার"
        },
        "4": {
          "words_ar": "غَيْرَ",
          "translate_bn": "ছাড়া"
        },
        "5": {
          "words_ar": "مَمْنُونٍ",
          "translate_bn": "শেষ"
        }
      },
      "english_trans": "And most surely you shall have a reward never to be cut off."
    },
    "4": {
      "arabic_text": "وَإِنَّكَ لَعَلَى خُلُقٍ عَظِيمٍ",
      "bangla_trans": "নিঃসন্দেহে তুমি নৈতিকতার অতি উচ্চ মর্যাদায় সমাসীন।",
      "word_by_word": {
        "1": {
          "words_ar": "وَإِنَّكَ",
          "translate_bn": "এবং তুমি নিশ্চয়"
        },
        "2": {
          "words_ar": "لَعَلَىٰ",
          "translate_bn": "উপর অবশ্যই(অথিষ্ঠিত)"
        },
        "3": {
          "words_ar": "خُلُقٍ",
          "translate_bn": "চরিত্রের"
        },
        "4": {
          "words_ar": "عَظِيمٍ",
          "translate_bn": "মহান"
        }
      },
      "english_trans": "And most surely you conform (yourself) to sublime morality."
    },
    "5": {
      "arabic_text": "فَسَتُبْصِرُ وَيُبْصِرُونَ",
      "bangla_trans": "অচিরে তুমিও দেখতে পাবে এবং তারাও দেখতে পাবে যে,",
      "word_by_word": {
        "1": {
          "words_ar": "فَسَتُبْصِرُ",
          "translate_bn": "অতএব তুমি শীঘ্রই দেখবে"
        },
        "2": {
          "words_ar": "وَيُبْصِرُونَ",
          "translate_bn": "এবং তারা দেখবে"
        }
      },
      "english_trans": "So you shall see, and they (too) shall see,"
    },
    "6": {
      "arabic_text": "بِأَيْيِكُمُ الْمَفْتُونُ",
      "bangla_trans": "তোমাদের উভয়ের মধ্যে কারা পাগলামীতে লিপ্ত।",
      "word_by_word": {
        "1": {
          "words_ar": "بِأَيْيِكُمُ",
          "translate_bn": "তোমাদের মধ্যে কে"
        },
        "2": {
          "words_ar": "الْمَفْتُونُ",
          "translate_bn": "বিকারগ্রস্ত"
        }
      },
      "english_trans": "Which of you is afflicted with madness."
    },
    "7": {
      "arabic_text": "إِنَّ رَبَّكَ هُوَ أَعْلَمُ بِمَنْ ضَلَّ عَنْ سَبِيلِهِ وَهُوَ أَعْلَمُ بِالْمُهْتَدِينَ",
      "bangla_trans": "তোমার রব তাদেরকেও ভাল করে জানেন যারা তাঁর পথ থেকে বিচ্যুত হয়েছে। আর তাদেরকেও ভাল করে জানেন যারা সঠিক পথ প্রাপ্ত হয়েছে।",
      "word_by_word": {
        "1": {
          "words_ar": "إِنَّ",
          "translate_bn": "নিশ্চয়"
        },
        "2": {
          "words_ar": "رَبَّكَ",
          "translate_bn": "তোমার রব"
        },
        "3": {
          "words_ar": "هُوَ",
          "translate_bn": "তিনিই"
        },
        "4": {
          "words_ar": "أَعْلَمُ",
          "translate_bn": "সব জানেন"
        },
        "5": {
          "words_ar": "بِمَنْ",
          "translate_bn": "কে"
        },
        "6": {
          "words_ar": "ضَلَّ",
          "translate_bn": "ভ্রষ্ট হয়েছে"
        },
        "7": {
          "words_ar": "عَنْ",
          "translate_bn": "থেকে"
        },
        "8": {
          "words_ar": "سَبِيلِهِ",
          "translate_bn": "তার পথ"
        },
        "9": {
          "words_ar": "وَهُوَ",
          "translate_bn": "এবং তিনিই"
        },
        "10": {
          "words_ar": "أَعْلَمُ",
          "translate_bn": "সব জানেন"
        },
        "11": {
          "words_ar": "بِالْمُهْتَدِينَ",
          "translate_bn": "পথ প্রাপ্তদেরকে"
        }
      },
      "english_trans": "Surely your Lord best knows him who errs from His way, and He best knows the followers of the right course."
    },
    "8": {
      "arabic_text": "فَلَا تُطِعِ الْمُكَذِّبِينَ",
      "bangla_trans": "কাজেই তুমি মিথ্যাচরীদের অনুসরণ করো না।",
      "word_by_word": {
        "1": {
          "words_ar": "فَلَا",
          "translate_bn": "না অতএব"
        },
        "2": {
          "words_ar": "تُطِعِ",
          "translate_bn": "মেনো"
        },
        "3": {
          "words_ar": "الْمُكَذِّبِينَ",
          "translate_bn": "মিথ্যারোপকারীদের।"
        }
      },
      "english_trans": "So do not yield to the rejecters."
    },
    "9": {
      "arabic_text": "وَدُّوا لَوْ تُدْهِنُ فَيُدْهِنُونَ",
      "bangla_trans": "তারা তো চায় তুমি নমনীয়তা দেখালে তারাও নমনীয়তা দেখাবে।",
      "word_by_word": {
        "1": {
          "words_ar": "وَدُّوا",
          "translate_bn": "তারা চাই"
        },
        "2": {
          "words_ar": "لَوْ",
          "translate_bn": "যদি"
        },
        "3": {
          "words_ar": "تُدْهِنُ",
          "translate_bn": "তুমি নমনীয় হও"
        },
        "4": {
          "words_ar": "فَيُدْهِنُونَ",
          "translate_bn": "তবে তারা নমনীয় হবে"
        }
      },
      "english_trans": "They wish that you should be pliant so they (too) would be pliant."
    },
    "10": {
      "arabic_text": "وَلَا تُطِعْ كُلَّ حَلَّافٍ مَهِينٍ",
      "bangla_trans": "তুমি অবদমিত হয়ো না তার দ্বারা যে কথায় কথায় শপথ করে, যে মর্যাদাহীন,",
      "word_by_word": {
        "1": {
          "words_ar": "وَلَا",
          "translate_bn": "এবং না"
        },
        "2": {
          "words_ar": "تُطِعْ",
          "translate_bn": "অনুসরণ করে!"
        },
        "3": {
          "words_ar": "كُلَّ",
          "translate_bn": "প্রত্যেক"
        },
        "4": {
          "words_ar": "حَلَّافٍ",
          "translate_bn": "অত্যাধিক শপথকারী"
        },
        "5": {
          "words_ar": "مَهِينٍ",
          "translate_bn": "গুরুত্বহীন(ব্যক্তির)"
        }
      },
      "english_trans": "And yield not to any mean swearer"
    },
    "11": {
      "arabic_text": "هَمَّازٍ مَشَّاءٍ بِنَمِيمٍ",
      "bangla_trans": "যে গীবত করে, চোগল খোরী করে বেড়ায়,",
      "word_by_word": {
        "1": {
          "words_ar": "هَمَّازٍ",
          "translate_bn": "নিন্দাকারী"
        },
        "2": {
          "words_ar": "مَشَّاءٍ",
          "translate_bn": "ঘুরে বেড়াই"
        },
        "3": {
          "words_ar": "بِنَمِيمٍ",
          "translate_bn": "চোগলখুরীসহ"
        }
      },
      "english_trans": "Defamer, going about with slander"
    },
    "12": {
      "arabic_text": "مَنَّاعٍ لِلْخَيْرِ مُعْتَدٍ أَثِيمٍ",
      "bangla_trans": "কল্যাণের কাজে বাধা দেয়, জুলুম ও বাড়াবাড়িতে সীমালংঘন করে,",
      "word_by_word": {
        "1": {
          "words_ar": "مَنَّاعٍ",
          "translate_bn": "প্রতিবন্ধক"
        },
        "2": {
          "words_ar": "لِلْخَيْرِ",
          "translate_bn": "কল্যানের জন্য"
        },
        "3": {
          "words_ar": "مُعْتَدٍ",
          "translate_bn": "সীমালংঘণকারী"
        },
        "4": {
          "words_ar": "أَثِيمٍ",
          "translate_bn": "পাপিষ্ঠ"
        }
      },
      "english_trans": "Forbidder of good, outstepping the limits, sinful,"
    },
    "13": {
      "arabic_text": "عُتُلٍّ بَعْدَ ذَلِكَ زَنِيمٍ",
      "bangla_trans": "চরম পাপিষ্ঠ ঝগড়াটে ও হিংস্র এবং সর্বোপরি বজ্জাত।",
      "word_by_word": {
        "1": {
          "words_ar": "عُتُلٍّ",
          "translate_bn": "নিষ্ঠুর"
        },
        "2": {
          "words_ar": "بَعْدَ",
          "translate_bn": "পরে"
        },
        "3": {
          "words_ar": "ذَٰلِكَ",
          "translate_bn": "এর"
        },
        "4": {
          "words_ar": "زَنِيمٍ",
          "translate_bn": "(এ কারণে) বদজাতও"
        }
      },
      "english_trans": "Ignoble, besides all that, base-born;"
    },
    "14": {
      "arabic_text": "أَنْ كَانَ ذَا مَالٍ وَبَنِينَ",
      "bangla_trans": "কারণ সে সম্পদশালী ও অনেক সন্তানের পিতা",
      "word_by_word": {
        "1": {
          "words_ar": "أَنْ",
          "translate_bn": "যে"
        },
        "2": {
          "words_ar": "كَانَ",
          "translate_bn": "সেছিলো"
        },
        "3": {
          "words_ar": "ذَا",
          "translate_bn": "অধিকারী"
        },
        "4": {
          "words_ar": "مَالٍ",
          "translate_bn": "মালের(ধন-সম্পদের)"
        },
        "5": {
          "words_ar": "وَبَنِينَ",
          "translate_bn": "এবং সন্তানসন্ততির"
        }
      },
      "english_trans": "Because he possesses wealth and sons."
    },
    "15": {
      "arabic_text": "إِذَا تُتْلَى عَلَيْهِ آيَاتُنَا قَالَ أَسَاطِيرُ الْأَوَّلِينَ",
      "bangla_trans": "তাকে যখন আমার আয়াতসমূহ শোনানো হয় তখন সে বলে এ তো প্রাচীনকালের কিস্সা-কাহিনী।",
      "word_by_word": {
        "1": {
          "words_ar": "إِذَا",
          "translate_bn": "যখন"
        },
        "2": {
          "words_ar": "تُتْلَىٰ",
          "translate_bn": "আবৃত্তি করা হয়"
        },
        "3": {
          "words_ar": "عَلَيْهِ",
          "translate_bn": "তার নিকট"
        },
        "4": {
          "words_ar": "آيَاتُنَا",
          "translate_bn": "আমাদের আয়াতগুলো"
        },
        "5": {
          "words_ar": "قَالَ",
          "translate_bn": "সে বলে"
        },
        "6": {
          "words_ar": "أَسَاطِيرُ",
          "translate_bn": "গল্পকাহিনী সমুহ"
        },
        "7": {
          "words_ar": "الْأَوَّلِينَ",
          "translate_bn": "আগেরকালের(লোকদের)"
        }
      },
      "english_trans": "When Our communications are recited to him, he says: Stories of those of yore."
    },
    "16": {
      "arabic_text": "سَنَسِمُهُ عَلَى الْخُرْطُومِ",
      "bangla_trans": "শিগগীরই আমি তার শুঁড় দাগিয়ে দেবো। ",
      "word_by_word": {
        "1": {
          "words_ar": "سَنَسِمُهُ",
          "translate_bn": "তাকে দাগাব শিঘ্র"
        },
        "2": {
          "words_ar": "عَلَى",
          "translate_bn": "উপর"
        },
        "3": {
          "words_ar": "الْخُرْطُومِ",
          "translate_bn": "শুড়ের"
        }
      },
      "english_trans": "We will brand him on the nose."
    },
    "17": {
      "arabic_text": "إِنَّا بَلَوْنَاهُمْ كَمَا بَلَوْنَا أَصْحَابَ الْجَنَّةِ إِذْ أَقْسَمُوا لَيَصْرِمُنَّهَا مُصْبِحِينَ",
      "bangla_trans": "আমি এদের (মক্কাবাসী)-কে পরীক্ষায় ফেলেছি যেভাবে পরীক্ষায় ফেলেছিলাম বাগানের মালিকদেরকে, যখন তারা শপথ করেছিল যে, তারা খুব ভোরে গিয়ে অবশ্যি নিজেদের বাগানের ফল আহরণ করবে।",
      "word_by_word": {
        "1": {
          "words_ar": "إِنَّا",
          "translate_bn": "নিশ্চয়আমরা"
        },
        "2": {
          "words_ar": "بَلَوْنَاهُمْ",
          "translate_bn": "তাদের পরীক্ষায় ফেলেছি"
        },
        "3": {
          "words_ar": "كَمَا",
          "translate_bn": "যেমন"
        },
        "4": {
          "words_ar": "بَلَوْنَا",
          "translate_bn": "আমরা পরীক্ষা করেছিলাম"
        },
        "5": {
          "words_ar": "أَصْحَابَ",
          "translate_bn": "মালিকদের"
        },
        "6": {
          "words_ar": "الْجَنَّةِ",
          "translate_bn": "বাগানটির"
        },
        "7": {
          "words_ar": "إِذْ",
          "translate_bn": "যখন"
        },
        "8": {
          "words_ar": "أَقْسَمُوا",
          "translate_bn": "তারা শপথ করেছিল"
        },
        "9": {
          "words_ar": "لَيَصْرِمُنَّهَا",
          "translate_bn": "তারা অবশ্যই তা কাটবে(পাড়িবে)"
        },
        "10": {
          "words_ar": "مُصْبِحِينَ",
          "translate_bn": "সকাল(হতে)"
        }
      },
      "english_trans": "Surely We will try them as We tried the owners of the garden, when they swore that they would certainly cut off the produce in the morning,"
    },
    "18": {
