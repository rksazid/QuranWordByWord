    },
    "41": {
      "arabic_text": "وَمَا هُوَ بِقَوْلِ شَاعِرٍ قَلِيلًا مَا تُؤْمِنُونَ",
      "bangla_trans": "কোন কবির কাব্য নয়। তোমরা খুব কমই ঈমান পোষণ করে থাকো। ",
      "word_by_word": {
        "1": {
          "words_ar": "وَمَا",
          "translate_bn": "এবং না"
        },
        "2": {
          "words_ar": "هُوَ",
          "translate_bn": "তা"
        },
        "3": {
          "words_ar": "بِقَوْلِ",
          "translate_bn": "কথা"
        },
        "4": {
          "words_ar": "شَاعِرٍ",
          "translate_bn": "কবির"
        },
        "5": {
          "words_ar": "قَلِيلًا",
          "translate_bn": "কমই"
        },
        "6": {
          "words_ar": "مَا",
          "translate_bn": "যা"
        },
        "7": {
