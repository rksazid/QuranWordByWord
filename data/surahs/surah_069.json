      "word_by_word": {
        "1": {
          "words_ar": "وَإِنَّهُ",
          "translate_bn": "ও নিশ্চয় তা"
        },
        "2": {
          "words_ar": "لَحَقُّ",
          "translate_bn": "অবশ্যই সত্য"
        },
        "3": {
          "words_ar": "الْيَقِينِ",
          "translate_bn": "সুনিশ্চিত"
        }
      },
      "english_trans": "And most surely it is the true certainty"
    },
    "52": {
      "arabic_text": "فَسَبِّحْ بِاسْمِ رَبِّكَ الْعَظِيمِ",
      "bangla_trans": "অতএব হে নবী, তুমি তোমার মহান রবের পবিত্রতা ঘোষণা করো।",
      "word_by_word": {
