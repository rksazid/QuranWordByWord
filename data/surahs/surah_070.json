{
  "surah_id": 70,
  "verses": {
    "0": {
      "arabic_text": "بِسْمِ اللّٰهِ الرَّحْمٰنِ الرَّحِیْمِ",
      "bangla_trans": "পরম করুণাময় মেহেরবান আল্লাহর নামে",
      "english_trans": "In the name of Allah, the Beneficent, the Merciful."
    },
    "1": {
      "arabic_text": "سَأَلَ سَائِلٌ بِعَذَابٍ وَاقِعٍ",
      "bangla_trans": "এক প্রার্থনাকারী আযাব প্রার্থনা করেছে",
      "word_by_word": {
        "1": {
          "words_ar": "سَأَلَ",
          "translate_bn": "জিজ্ঞাসা করল"
        },
        "2": {
          "words_ar": "سَائِلٌ",
          "translate_bn": "এক প্রশ্নকারী"
        },
        "3": {
          "words_ar": "بِعَذَابٍ",
          "translate_bn": "এমন আযাব সম্পর্কে"
        },
        "4": {
          "words_ar": "وَاقِعٍ",
          "translate_bn": "যা আপতিত হবে"
        }
      },
      "english_trans": "One demanding, demanded the chastisement which must befall"
    },
    "2": {
      "arabic_text": "لِلْكَافِرِينَ لَيْسَ لَهُ دَافِعٌ",
      "bangla_trans": "যে আযাব কাফেরের জন্য অবধারিত।  তা প্রতিরোধ করার কেউ নেই।",
      "word_by_word": {
        "1": {
          "words_ar": "لِلْكَافِرِينَ",
          "translate_bn": "কাফিরদের উপর"
        },
        "2": {
          "words_ar": "لَيْسَ",
          "translate_bn": "নেই"
        },
        "3": {
          "words_ar": "لَهُ",
          "translate_bn": "তার"
        },
        "4": {
          "words_ar": "دَافِعٌ",
          "translate_bn": "কোন প্রতিরোধকারী"
        }
      },
      "english_trans": "The unbelievers-- there is none to avert it--"
    },
    "3": {
      "arabic_text": "مِنَ اللَّهِ ذِي الْمَعَارِجِ",
      "bangla_trans": "আল্লাহর পক্ষ থেকে, যিনি উর্ধ্বারোহণের সোপান সমূহের অধিকারী",
      "word_by_word": {
        "1": {
          "words_ar": "مِنَ",
          "translate_bn": "থেকে"
        },
        "2": {
          "words_ar": "اللَّهِ",
          "translate_bn": "আল্লাহ"
        },
        "3": {
          "words_ar": "ذِي",
          "translate_bn": "মালিক"
        },
        "4": {
          "words_ar": "الْمَعَارِجِ",
          "translate_bn": "ঊর্ধ্বারোহণের সোপানসমূহের অধিকারী"
        }
      },
      "english_trans": "From Allah, the Lord of the ways of Ascent."
    },
    "4": {
      "arabic_text": "تَعْرُجُ الْمَلَائِكَةُ وَالرُّوحُ إِلَيْهِ فِي يَوْمٍ كَانَ مِقْدَارُهُ خَمْسِينَ أَلْفَ سَنَةٍ",
      "bangla_trans": "ফেরেশতারা এবং রূহ তার দিকে উঠে যায় এমন এক দিনে যা পঞ্চাশ হাজার বছরের সমান।",
      "word_by_word": {
        "1": {
          "words_ar": "تَعْرُجُ",
          "translate_bn": "চড়ে"
        },
        "2": {
          "words_ar": "الْمَلَائِكَةُ",
          "translate_bn": "ফেরেশতাগণ"
        },
        "3": {
          "words_ar": "وَالرُّوحُ",
          "translate_bn": "ও রূহ(জিবরাঈল)"
        },
        "4": {
          "words_ar": "إِلَيْهِ",
          "translate_bn": "তাকে"
        },
        "5": {
          "words_ar": "فِي",
          "translate_bn": "মধ্যে"
        },
        "6": {
          "words_ar": "يَوْمٍ",
          "translate_bn": "একদিনের"
        },
        "7": {
          "words_ar": "كَانَ",
          "translate_bn": "[হয়]"
        },
        "8": {
          "words_ar": "مِقْدَارُهُ",
          "translate_bn": "তার পরিমাপ"
        },
        "9": {
          "words_ar": "خَمْسِينَ",
          "translate_bn": "পঞ্চাশ (হয়)"
        },
        "10": {
          "words_ar": "أَلْفَ",
          "translate_bn": "হাজার"
        },
        "11": {
          "words_ar": "سَنَةٍ",
          "translate_bn": "বছর"
        }
      },
      "english_trans": "To Him ascend the angels and the Spirit in a day the measure of which is fifty thousand years."
    },
    "5": {
      "arabic_text": "فَاصْبِرْ صَبْرًا جَمِيلًا",
      "bangla_trans": "অতএব, হে নবী, তুমি উত্তম ধৈর্য ধারণ করো। ",
      "word_by_word": {
        "1": {
          "words_ar": "فَاصْبِرْ",
          "translate_bn": "সুতরাং ধৈর্য ধরুন"
        },
        "2": {
          "words_ar": "صَبْرًا",
          "translate_bn": "ধৈর্য"
        },
        "3": {
          "words_ar": "جَمِيلًا",
          "translate_bn": "উত্তম"
        }
      },
      "english_trans": "Therefore endure with a goodly patience."
    },
    "6": {
      "arabic_text": "إِنَّهُمْ يَرَوْنَهُ بَعِيدًا",
      "bangla_trans": "তারা সেটিকে অনেক দূরে মনে করেছে।",
      "word_by_word": {
        "1": {
          "words_ar": "إِنَّهُمْ",
          "translate_bn": "তারা নিশ্চয়"
        },
        "2": {
          "words_ar": "يَرَوْنَهُ",
          "translate_bn": "তা দেখে"
        },
        "3": {
          "words_ar": "بَعِيدًا",
          "translate_bn": "বহুদূরে"
        }
      },
      "english_trans": "Surely they think it to be far off,"
    },
    "7": {
      "arabic_text": "وَنَرَاهُ قَرِيبًا",
      "bangla_trans": "কিন্তু আমি দেখছি তা নিকটে।",
      "word_by_word": {
        "1": {
          "words_ar": "وَنَرَاهُ",
          "translate_bn": "কিন্তু আমরা তা দেখেছি"
        },
        "2": {
          "words_ar": "قَرِيبًا",
          "translate_bn": "নিকটে"
        }
      },
      "english_trans": "And We see it nigh."
    },
    "8": {
      "arabic_text": "يَوْمَ تَكُونُ السَّمَاءُ كَالْمُهْلِ",
      "bangla_trans": "(যেদিন সেই আযাব আসবে) সেদিন আসমান গলিত রূপার মত বর্ণ ধারণ করবে।",
      "word_by_word": {
        "1": {
          "words_ar": "يَوْمَ",
          "translate_bn": "সেদিন"
        },
        "2": {
          "words_ar": "تَكُونُ",
          "translate_bn": "হবে"
        },
        "3": {
          "words_ar": "السَّمَاءُ",
          "translate_bn": "আকাশ"
        },
        "4": {
          "words_ar": "كَالْمُهْلِ",
          "translate_bn": "গলিত ধাতুর মত"
        }
      },
      "english_trans": "On the day when the heaven shall be as molten copper"
    },
    "9": {
      "arabic_text": "وَتَكُونُ الْجِبَالُ كَالْعِهْنِ",
      "bangla_trans": "আর পাহাড়সমূহ রংবেরং-এর ধুনিত পশমের মত হয়ে যাবে। ",
      "word_by_word": {
        "1": {
          "words_ar": "وَتَكُونُ",
          "translate_bn": "এবং হবে"
        },
        "2": {
          "words_ar": "الْجِبَالُ",
          "translate_bn": "পর্বতসমূহ"
        },
        "3": {
          "words_ar": "كَالْعِهْنِ",
          "translate_bn": "রঙিন পশমের মত"
        }
      },
      "english_trans": "And the mountains shall be as tufts of wool"
    },
    "10": {
      "arabic_text": "وَلَا يَسْأَلُ حَمِيمٌ حَمِيمًا",
      "bangla_trans": "কোন পরম বন্ধুও বন্ধুকে জিজ্ঞেস করবে না।",
      "word_by_word": {
        "1": {
          "words_ar": "وَلَا",
          "translate_bn": "এবং না"
        },
        "2": {
          "words_ar": "يَسْأَلُ",
          "translate_bn": "জিজ্ঞাসা করবে"
        },
        "3": {
          "words_ar": "حَمِيمٌ",
          "translate_bn": "কোন বন্ধু"
        },
        "4": {
          "words_ar": "حَمِيمًا",
          "translate_bn": "বন্ধুকে"
        }
      },
      "english_trans": "And friend shall not ask of friend"
    },
    "11": {
      "arabic_text": "يُبَصَّرُونَهُمْ يَوَدُّ الْمُجْرِمُ لَوْ يَفْتَدِي مِنْ عَذَابِ يَوْمِئِذٍ بِبَنِيهِ",
      "bangla_trans": "অথচ তাদেরকে পরস্পরে দৃষ্টি সীমার মধ্যে রাখা হবে। অপরাধী সেদিনের আযাব থেকে মুক্তির বিনিময়ে তার সন্তান-সন্ততিকে,",
      "word_by_word": {
        "1": {
          "words_ar": "يُبَصَّرُونَهُمْ",
          "translate_bn": "তাদেরকে দেখানো হবে"
        },
        "2": {
          "words_ar": "يَوَدُّ",
          "translate_bn": "ইচ্ছা করবে"
        },
        "3": {
          "words_ar": "الْمُجْرِمُ",
          "translate_bn": "অপরাধী"
        },
        "4": {
          "words_ar": "لَوْ",
          "translate_bn": "যদি"
        },
        "5": {
          "words_ar": "يَفْتَدِي",
          "translate_bn": "মুক্তিপন দিতে পারত"
        },
        "6": {
          "words_ar": "مِنْ",
          "translate_bn": "থেকে"
        },
        "7": {
          "words_ar": "عَذَابِ",
          "translate_bn": "আযাব"
        },
        "8": {
          "words_ar": "يَوْمِئِذٍ",
          "translate_bn": "সেদিন"
        },
        "9": {
          "words_ar": "بِبَنِيهِ",
          "translate_bn": "তার সন্তানদের দ্বারা"
        }
      },
      "english_trans": "(Though) they shall be made to see each other. The guilty one would fain redeem himself from the chastisement of that day by (sacrificing) his children,"
    },
    "12": {
      "arabic_text": "وَصَاحِبَتِهِ وَأَخِيهِ",
      "bangla_trans": "স্ত্রীকে, ভাইকে এবং",
      "word_by_word": {
        "1": {
          "words_ar": "وَصَاحِبَتِهِ",
          "translate_bn": "এবং তার স্ত্রী"
        },
        "2": {
          "words_ar": "وَأَخِيهِ",
          "translate_bn": "এবং তার ভাই"
        }
      },
      "english_trans": "And his wife and his brother"
    },
    "13": {
      "arabic_text": "وَفَصِيلَتِهِ الَّتِي تُؤْوِيهِ",
      "bangla_trans": "তাকে আশ্রয়দানকারী জ্ঞাতি-গোষ্ঠীর আপনজনকে",
      "word_by_word": {
        "1": {
          "words_ar": "وَفَصِيلَتِهِ",
          "translate_bn": "আর তার জ্ঞাতি-গোষ্ঠীকে"
        },
        "2": {
          "words_ar": "الَّتِي",
          "translate_bn": "যা"
        },
        "3": {
          "words_ar": "تُؤْوِيهِ",
          "translate_bn": "তাকে আশ্রয় দেয়"
        }
      },
      "english_trans": "And the nearest of his kinsfolk who gave him shelter,"
    },
    "14": {
      "arabic_text": "وَمَنْ فِي الْأَرْضِ جَمِيعًا ثُمَّ يُنْجِيهِ",
      "bangla_trans": "এমনকি, পৃথিবীর সবকিছুই দিতে চাইবে।",
      "word_by_word": {
        "1": {
          "words_ar": "وَمَنْ",
          "translate_bn": "এবং যা"
        },
        "2": {
          "words_ar": "فِي",
          "translate_bn": "মধ্যে্"
        },
        "3": {
          "words_ar": "الْأَرْضِ",
          "translate_bn": "যমীনের"
        },
        "4": {
          "words_ar": "جَمِيعًا",
          "translate_bn": "সবকিছুই"
        },
        "5": {
          "words_ar": "ثُمَّ",
          "translate_bn": "তারপর"
        },
        "6": {
          "words_ar": "يُنْجِيهِ",
          "translate_bn": "তাকে মুক্তি দিত"
        }
      },
      "english_trans": "And all those that are in the earth, (wishing) then (that) this might deliver him."
    },
    "15": {
      "arabic_text": "كَلَّا إِنَّهَا لَظَى",
      "bangla_trans": "কখনো নয়, তা তো হবে জলন্ত আগুনের লেলিহান শিখা",
      "word_by_word": {
        "1": {
          "words_ar": "كَلَّا",
          "translate_bn": "অবশ্যই নহে!"
        },
        "2": {
          "words_ar": "إِنَّهَا",
          "translate_bn": "নিশ্চয় তা"
        },
        "3": {
          "words_ar": "لَظَىٰ",
          "translate_bn": "লেলিহান আগুন"
        }
      },
      "english_trans": "By no means! Surely it is a flaming fire"
    },
    "16": {
      "arabic_text": "نَزَّاعَةً لِلشَّوَى",
      "bangla_trans": "যা শরীরের গোশত ও চামড়া ঝলসিয়ে নিঃশেষ করে দেবে।",
      "word_by_word": {
        "1": {
          "words_ar": "نَزَّاعَةً",
          "translate_bn": "লেহনকারী"
        },
        "2": {
          "words_ar": "لِلشَّوَىٰ",
          "translate_bn": "চামড়াকে"
        }
      },
      "english_trans": "Dragging by the head,"
    },
    "17": {
      "arabic_text": "تَدْعُو مَنْ أَدْبَرَ وَتَوَلَّى",
      "bangla_trans": "তাদেরকে সে অগ্নিশিখা উচ্চ স্বরে নিজের কাছে ডাকবে, যারা সত্য থেকে মুখ ফিরিয়ে নিয়েছিল, পৃষ্ঠ প্রদর্শন করেছিল",
      "word_by_word": {
        "1": {
          "words_ar": "تَدْعُو",
          "translate_bn": "আহবান করে"
        },
        "2": {
          "words_ar": "مَنْ",
          "translate_bn": "যে"
        },
        "3": {
          "words_ar": "أَدْبَرَ",
          "translate_bn": "পিঠ প্রদর্শন করে"
        },
        "4": {
          "words_ar": "وَتَوَلَّىٰ",
          "translate_bn": "ও মুখ ফিরিয়ে"
        }
      },
      "english_trans": "It shall claim him who turned and fled (from truth),"
    },
    "18": {
      "arabic_text": "وَجَمَعَ فَأَوْعَى",
      "bangla_trans": "আর সম্পদ জমা করে ডিমে তা দেয়ার মত করে আগলে রেখেছিল ",
      "word_by_word": {
        "1": {
          "words_ar": "وَجَمَعَ",
          "translate_bn": "এবং জমা করেছে"
        },
        "2": {
          "words_ar": "فَأَوْعَىٰ",
          "translate_bn": "অতঃপর তা সংরক্ষিত রেখেছে"
        }
      },
      "english_trans": "And amasses (wealth) then shuts it up."
    },
    "19": {
      "arabic_text": "إِنَّ الْإِنْسَانَ خُلِقَ هَلُوعًا",
      "bangla_trans": "মানুষকে ছোট মনের অধিকারী করে সৃষ্টি করা হয়েছে।",
      "word_by_word": {
        "1": {
          "words_ar": "إِنَّ",
          "translate_bn": "নিশ্চয়"
        },
        "2": {
          "words_ar": "الْإِنْسَانَ",
          "translate_bn": "মানুষকে"
        },
        "3": {
          "words_ar": "خُلِقَ",
          "translate_bn": "সৃষ্টি করা হয়েছে"
        },
        "4": {
          "words_ar": "هَلُوعًا",
          "translate_bn": "অস্থির"
        }
      },
      "english_trans": "Surely man is created of a hasty temperament"
    },
    "20": {
      "arabic_text": "إِذَا مَسَّهُ الشَّرُّ جَزُوعًا",
      "bangla_trans": "বিপদ-মুসিবতে পড়লেই সে ঘাবড়ে যায়,",
      "word_by_word": {
        "1": {
          "words_ar": "إِذَا",
          "translate_bn": "কখন"
        },
        "2": {
          "words_ar": "مَسَّهُ",
          "translate_bn": "তাকে স্পর্শ করে"
        },
        "3": {
          "words_ar": "الشَّرُّ",
          "translate_bn": "মন্দ"
        },
        "4": {
          "words_ar": "جَزُوعًا",
