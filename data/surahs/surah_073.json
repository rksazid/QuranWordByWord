{
  "surah_id": 73,
  "verses": {
    "0": {
      "arabic_text": "بِسْمِ اللّٰهِ الرَّحْمٰنِ الرَّحِیْمِ",
      "bangla_trans": "পরম করুণাময় মেহেরবান আল্লাহর নামে",
      "english_trans": "In the name of Allah, the Beneficent, the Merciful."
    },
    "1": {
      "arabic_text": "يَا أَيُّهَا الْمُزَّمِّلُ",
      "bangla_trans": "হে বস্ত্র মুড়ি দিয়ে শয়নকারী",
      "word_by_word": {
        "1": {
          "words_ar": "يَاأَيُّهَا",
          "translate_bn": "হে"
        },
        "2": {
          "words_ar": "الْمُزَّمِّلُ",
          "translate_bn": "বস্ত্রাবৃত"
        }
      },
      "english_trans": "O you who have wrapped up in your garments!"
    },
    "2": {
      "arabic_text": "قُمِ اللَّيْلَ إِلَّا قَلِيلًا",
      "bangla_trans": "রাতের বেলা নামাযে রত থাকো। তবে কিছু সময় ছাড়া",
      "word_by_word": {
        "1": {
          "words_ar": "قُمِ",
          "translate_bn": "উঠো"
        },
        "2": {
          "words_ar": "اللَّيْلَ",
          "translate_bn": "রাতে (ইবাদত করো)"
        },
        "3": {
          "words_ar": "إِلَّا",
          "translate_bn": "ব্যতীত"
        },
        "4": {
          "words_ar": "قَلِيلًا",
          "translate_bn": "কিছু অংশ"
        }
      },
      "english_trans": "Rise to pray in the night except a little,"
    },
    "3": {
      "arabic_text": "نِصْفَهُ أَوِ انْقُصْ مِنْهُ قَلِيلًا",
      "bangla_trans": "অর্ধেক রাত, কিংবা তার চেয়ে কিছু কম করো।",
      "word_by_word": {
        "1": {
          "words_ar": "نِصْفَهُ",
          "translate_bn": "তার অর্ধেক"
        },
        "2": {
          "words_ar": "أَوِ",
          "translate_bn": "বা"
        },
        "3": {
          "words_ar": "انْقُصْ",
          "translate_bn": "কম করো"
        },
        "4": {
          "words_ar": "مِنْهُ",
          "translate_bn": "তা থেকে"
        },
        "5": {
          "words_ar": "قَلِيلًا",
          "translate_bn": "সামান্য"
        }
      },
      "english_trans": "Half of it, or lessen it a little,"
    },
    "4": {
      "arabic_text": "أَوْ زِدْ عَلَيْهِ وَرَتِّلِ الْقُرْآنَ تَرْتِيلًا",
      "bangla_trans": "অথবা তার ওপর কিছু বাড়িয়ে নাও। আর কুরআন থেমে থেমে পাঠ করো।",
      "word_by_word": {
        "1": {
          "words_ar": "أَوْ",
          "translate_bn": "অথবা"
        },
        "2": {
          "words_ar": "زِدْ",
          "translate_bn": "বাড়াও"
        },
        "3": {
          "words_ar": "عَلَيْهِ",
          "translate_bn": "তার উপর"
        },
        "4": {
          "words_ar": "وَرَتِّلِ",
          "translate_bn": "এবং আবৃতি করো ধীরে ধীরে"
        },
        "5": {
          "words_ar": "الْقُرْآنَ",
          "translate_bn": "কুরআন"
        },
        "6": {
          "words_ar": "تَرْتِيلًا",
          "translate_bn": "তারতিলসহ"
        }
      },
      "english_trans": "Or add to it, and recite the Quran as it ought to be recited."
    },
    "5": {
      "arabic_text": "إِنَّا سَنُلْقِي عَلَيْكَ قَوْلًا ثَقِيلًا",
      "bangla_trans": "আমি অতি শীঘ্র তোমার ওপর একটি গুরুভার বাণী নাযিল করবো।",
      "word_by_word": {
        "1": {
          "words_ar": "إِنَّا",
          "translate_bn": "আমরা নিশ্চয়"
        },
        "2": {
          "words_ar": "سَنُلْقِي",
          "translate_bn": "অর্পণ আমরা শিঘ্রই করবো"
        },
        "3": {
          "words_ar": "عَلَيْكَ",
          "translate_bn": "তোমার উপর"
        },
        "4": {
          "words_ar": "قَوْلًا",
          "translate_bn": "বাণী"
        },
        "5": {
          "words_ar": "ثَقِيلًا",
          "translate_bn": "ভারী"
        }
      },
      "english_trans": "Surely We will make to light upon you a weighty Word."
    },
    "6": {
      "arabic_text": "إِنَّ نَاشِئَةَ اللَّيْلِ هِيَ أَشَدُّ وَطْئًا وَأَقْوَمُ قِيلًا",
      "bangla_trans": "প্রকৃতপক্ষে রাতের বেলা জেগে ওঠা প্রবৃত্তিকে নিয়ন্ত্রণ করতে অনেক বেশী কার্যকর এবং যথাযথভাবে কুরআন পড়ার জন্য উপযুক্ত সময়",
      "word_by_word": {
        "1": {
          "words_ar": "إِنَّ",
          "translate_bn": "নিশ্চয়"
        },
        "2": {
          "words_ar": "نَاشِئَةَ",
          "translate_bn": "উথান (শয্যা ত্যাগ)"
        },
        "3": {
          "words_ar": "اللَّيْلِ",
          "translate_bn": "রাত্রি কালের"
        },
        "4": {
          "words_ar": "هِيَ",
          "translate_bn": "তা"
        },
        "5": {
          "words_ar": "أَشَدُّ",
          "translate_bn": "প্রবলতর"
        },
        "6": {
          "words_ar": "وَطْئًا",
          "translate_bn": "দলনে (প্রবৃত্তি)"
        },
        "7": {
          "words_ar": "وَأَقْوَمُ",
          "translate_bn": "এবং সঠিকতর"
        },
        "8": {
          "words_ar": "قِيلًا",
          "translate_bn": "বাক্য স্ফুরণে"
        }
      },
      "english_trans": "Surely the rising by night is the firmest way to tread and the best corrective of speech."
    },
    "7": {
      "arabic_text": "إِنَّ لَكَ فِي النَّهَارِ سَبْحًا طَوِيلًا",
      "bangla_trans": "দিনের বেলা তো তোমার অনেক ব্যস্ততা রয়েছে।",
      "word_by_word": {
        "1": {
          "words_ar": "إِنَّ",
          "translate_bn": "নিশ্চয়"
        },
        "2": {
          "words_ar": "لَكَ",
          "translate_bn": "তোমার জন্যে"
        },
        "3": {
          "words_ar": "فِي",
          "translate_bn": "মধ্যে"
        },
        "4": {
          "words_ar": "النَّهَارِ",
          "translate_bn": "দিনে"
        },
        "5": {
          "words_ar": "سَبْحًا",
          "translate_bn": "ব্যস্ততা"
        },
        "6": {
          "words_ar": "طَوِيلًا",
          "translate_bn": "দীর্ঘ"
        }
      },
      "english_trans": "Surely you have in the day time a long occupation."
    },
    "8": {
      "arabic_text": "وَاذْكُرِ اسْمَ رَبِّكَ وَتَبَتَّلْ إِلَيْهِ تَبْتِيلًا",
      "bangla_trans": "নিজ প্রভুর নাম স্মরণ করতে থাকো। এবং সবার থেকে বিচ্ছিন্ন হয়ে তাঁরই জন্য হয়ে যাও।",
      "word_by_word": {
        "1": {
          "words_ar": "وَاذْكُرِ",
          "translate_bn": "এবং তুমি স্মরণ করো"
        },
        "2": {
          "words_ar": "اسْمَ",
          "translate_bn": "নাম"
        },
        "3": {
          "words_ar": "رَبِّكَ",
          "translate_bn": "তোমার রবের"
        },
        "4": {
          "words_ar": "وَتَبَتَّلْ",
          "translate_bn": "এবং নিমগ্ন হও"
        },
        "5": {
          "words_ar": "إِلَيْهِ",
          "translate_bn": "তার দিকে"
        },
        "6": {
          "words_ar": "تَبْتِيلًا",
          "translate_bn": "খুব নিমগ্ন হয়ে"
        }
      },
      "english_trans": "And remember the name of your Lord and devote yourself to Him with (exclusive) devotion."
    },
    "9": {
      "arabic_text": "رَبُّ الْمَشْرِقِ وَالْمَغْرِبِ لَا إِلَهَ إِلَّا هُوَ فَاتَّخِذْهُ وَكِيلًا",
      "bangla_trans": "তিনি পূর্ব ও পশ্চিমের মালিক। তিনি ছাড়া আর কোন ইলাহ নেই। তাই তাঁকেই নিজের উকীল হিসেবে গ্রহণ করো।",
      "word_by_word": {
        "1": {
          "words_ar": "رَبُّ",
          "translate_bn": "রব"
        },
        "2": {
          "words_ar": "الْمَشْرِقِ",
          "translate_bn": "পূর্ব"
        },
        "3": {
          "words_ar": "وَالْمَغْرِبِ",
          "translate_bn": "ও পশ্চিমের"
        },
        "4": {
          "words_ar": "لَا",
          "translate_bn": "নেই"
        },
        "5": {
          "words_ar": "إِلَٰهَ",
          "translate_bn": "(কোন) ইলাহ"
        },
        "6": {
          "words_ar": "إِلَّا",
