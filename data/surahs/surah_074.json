{
  "surah_id": 74,
  "verses": {
    "0": {
      "arabic_text": "بِسْمِ اللّٰهِ الرَّحْمٰنِ الرَّحِیْمِ",
      "bangla_trans": "পরম করুণাময় মেহেরবান আল্লাহর নামে",
      "english_trans": "In the name of Allah, the Beneficent, the Merciful."
    },
    "1": {
      "arabic_text": "يَا أَيُّهَا الْمُدَّثِّرُ",
      "bangla_trans": "হে বস্ত্র মুড়ি দিয়ে শয়নকারী,",
      "word_by_word": {
        "1": {
          "words_ar": "يَاأَيُّهَا",
          "translate_bn": "হে"
        },
        "2": {
          "words_ar": "الْمُدَّثِّرُ",
          "translate_bn": "চাদরাবৃত"
        }
      },
      "english_trans": "O you who are clothed!"
    },
    "2": {
      "arabic_text": "قُمْ فَأَنْذِرْ",
      "bangla_trans": "ওঠো এবং সাবধান করে দাও,",
      "word_by_word": {
        "1": {
          "words_ar": "قُمْ",
          "translate_bn": "উঠ"
        },
        "2": {
          "words_ar": "فَأَنْذِرْ",
          "translate_bn": "সতর্ক কর অতঃপর"
        }
      },
      "english_trans": "Arise and warn,"
    },
    "3": {
      "arabic_text": "وَرَبَّكَ فَكَبِّرْ",
      "bangla_trans": "তোমার রবের শ্রেষ্ঠত্ব ঘোষণা করো,",
      "word_by_word": {
        "1": {
          "words_ar": "وَرَبَّكَ",
          "translate_bn": "ও তোমার রবের"
        },
        "2": {
          "words_ar": "فَكَبِّرْ",
          "translate_bn": "অতঃপর শ্রেষ্ঠত্ব ঘোষণা কর"
        }
      },
      "english_trans": "And your Lord do magnify,"
    },
    "4": {
      "arabic_text": "وَثِيَابَكَ فَطَهِّرْ",
      "bangla_trans": "তোমার পোশাক পবিত্র রাখো,",
      "word_by_word": {
        "1": {
          "words_ar": "وَثِيَابَكَ",
          "translate_bn": "এবং তোমার কাপড়"
        },
        "2": {
          "words_ar": "فَطَهِّرْ",
          "translate_bn": "অতঃপর পবিত্র কর"
        }
      },
      "english_trans": "And your garments do purify,"
    },
    "5": {
      "arabic_text": "وَالرُّجْزَ فَاهْجُرْ",
      "bangla_trans": "অপবিত্রতা থেকে দূরে থাকো,",
      "word_by_word": {
        "1": {
          "words_ar": "وَالرُّجْزَ",
          "translate_bn": "এবং অপবিত্রতা"
        },
        "2": {
          "words_ar": "فَاهْجُرْ",
          "translate_bn": "অতএব দূরে থাক"
        }
      },
      "english_trans": "And uncleanness do shun,"
    },
    "6": {
      "arabic_text": "وَلَا تَمْنُنْ تَسْتَكْثِرُ",
      "bangla_trans": "বেশী লাভ করার জন্য ইহসান করো না",
      "word_by_word": {
        "1": {
          "words_ar": "وَلَا",
          "translate_bn": "এবং না"
        },
        "2": {
          "words_ar": "تَمْنُنْ",
          "translate_bn": "অনুগ্রহ করো"
        },
        "3": {
          "words_ar": "تَسْتَكْثِرُ",
          "translate_bn": "বেশী পাওয়ার আশায়"
        }
      },
      "english_trans": "And bestow not favors that you may receive again with increase,"
    },
    "7": {
      "arabic_text": "وَلِرَبِّكَ فَاصْبِرْ",
      "bangla_trans": "এবং তোমার রবের জন্য ধৈর্য অবলম্বন করো।",
      "word_by_word": {
        "1": {
          "words_ar": "وَلِرَبِّكَ",
          "translate_bn": "এবং তোমার রবের জন্যে"
        },
        "2": {
          "words_ar": "فَاصْبِرْ",
          "translate_bn": "অতএব সবর কর"
        }
      },
      "english_trans": "And for the sake of your Lord, be patient."
    },
    "8": {
      "arabic_text": "فَإِذَا نُقِرَ فِي النَّاقُورِ",
      "bangla_trans": "তবে যখন শিংগায় ফুৎকার দেয়া হবে,",
      "word_by_word": {
        "1": {
          "words_ar": "فَإِذَا",
          "translate_bn": "অতঃপর যখন"
        },
        "2": {
          "words_ar": "نُقِرَ",
          "translate_bn": "ফুক দেয়া হবে"
        },
        "3": {
          "words_ar": "فِي",
          "translate_bn": "মধ্যে"
        },
        "4": {
          "words_ar": "النَّاقُورِ",
          "translate_bn": "সিঙ্গায়"
        }
      },
      "english_trans": "For when the trumpet is sounded,"
    },
    "9": {
      "arabic_text": "فَذَلِكَ يَوْمَئِذٍ يَوْمٌ عَسِيرٌ",
      "bangla_trans": "সেদিনটি অত্যন্ত কঠিন দিন হবে।",
      "word_by_word": {
        "1": {
          "words_ar": "فَذَٰلِكَ",
          "translate_bn": "অতএব সেই"
        },
        "2": {
          "words_ar": "يَوْمَئِذٍ",
          "translate_bn": "(হবে) দিন"
        },
        "3": {
          "words_ar": "يَوْمٌ",
          "translate_bn": "দিন"
        },
        "4": {
          "words_ar": "عَسِيرٌ",
          "translate_bn": "কঠিন"
        }
      },
      "english_trans": "That, at that time, shall be a difficult day,"
    },
    "10": {
      "arabic_text": "عَلَى الْكَافِرِينَ غَيْرُ يَسِيرٍ",
      "bangla_trans": "কাফেরদের জন্য মোটেই সহজ হবে না। ",
      "word_by_word": {
        "1": {
          "words_ar": "عَلَى",
          "translate_bn": "উপর"
        },
        "2": {
          "words_ar": "الْكَافِرِينَ",
          "translate_bn": "কাফিরদের"
        },
        "3": {
          "words_ar": "غَيْرُ",
          "translate_bn": "নয়"
        },
        "4": {
          "words_ar": "يَسِيرٍ",
          "translate_bn": "সহজ"
        }
      },
      "english_trans": "For the unbelievers, anything but easy."
    },
    "11": {
      "arabic_text": "ذَرْنِي وَمَنْ خَلَقْتُ وَحِيدًا",
      "bangla_trans": "আমাকে এবং সে ব্যক্তিকে ছেড়ে দাও যাকে আমি একা সৃষ্টি করেছি।",
      "word_by_word": {
        "1": {
          "words_ar": "ذَرْنِي",
          "translate_bn": "আমাকে ছাড়"
        },
        "2": {
          "words_ar": "وَمَنْ",
          "translate_bn": "আর যাকে"
        },
        "3": {
          "words_ar": "خَلَقْتُ",
          "translate_bn": "আমি সৃষ্টি করেছি"
        },
        "4": {
          "words_ar": "وَحِيدًا",
          "translate_bn": "একেলা"
        }
      },
      "english_trans": "Leave Me and him whom I created alone,"
    },
    "12": {
      "arabic_text": "وَجَعَلْتُ لَهُ مَالًا مَمْدُودًا",
      "bangla_trans": "তাকে অঢেল সম্পদ দিয়েছি",
      "word_by_word": {
        "1": {
          "words_ar": "وَجَعَلْتُ",
          "translate_bn": "এবং আমি বানিয়েছি"
        },
        "2": {
          "words_ar": "لَهُ",
          "translate_bn": "তার জন্যে"
        },
        "3": {
          "words_ar": "مَالًا",
          "translate_bn": "সম্পদ"
        },
        "4": {
          "words_ar": "مَمْدُودًا",
          "translate_bn": "বিপুল"
        }
      },
      "english_trans": "And give him vast riches,"
    },
    "13": {
      "arabic_text": "وَبَنِينَ شُهُودًا",
      "bangla_trans": "এবং আরো দিয়েছি সবসময় কাছে থাকার মত অনেক পুত্র সন্তান।",
      "word_by_word": {
        "1": {
          "words_ar": "وَبَنِينَ",
          "translate_bn": "এবং সন্তানাদি"
        },
        "2": {
          "words_ar": "شُهُودًا",
          "translate_bn": "সদা উপস্থিত"
        }
      },
      "english_trans": "And sons dwelling in his presence,"
    },
    "14": {
      "arabic_text": "وَمَهَّدْتُ لَهُ تَمْهِيدًا",
      "bangla_trans": "তার নেতৃত্বের পথ সহজ করে দিয়েছি।",
      "word_by_word": {
        "1": {
          "words_ar": "وَمَهَّدْتُ",
          "translate_bn": "এবং আমি সুগম করেছি"
        },
        "2": {
          "words_ar": "لَهُ",
          "translate_bn": "তার জন্যে"
        },
        "3": {
          "words_ar": "تَمْهِيدًا",
          "translate_bn": "প্রচুর স্বচ্ছলতা"
        }
      },
      "english_trans": "And I adjusted affairs for him adjustably;"
    },
    "15": {
      "arabic_text": "ثُمَّ يَطْمَعُ أَنْ أَزِيدَ",
      "bangla_trans": "এরপরও সে লালায়িত, আমি যেন তাকে আরো বেশী দান করি।",
      "word_by_word": {
        "1": {
          "words_ar": "ثُمَّ",
          "translate_bn": "এরপর"
        },
        "2": {
          "words_ar": "يَطْمَعُ",
          "translate_bn": "লালসা সে করে"
        },
        "3": {
          "words_ar": "أَنْ",
          "translate_bn": "যে"
        },
        "4": {
          "words_ar": "أَزِيدَ",
          "translate_bn": "অধিক দিব আমি"
        }
      },
      "english_trans": "And yet he desires that I should add more!"
    },
    "16": {
      "arabic_text": "كَلَّا إِنَّهُ كَانَ لِآيَاتِنَا عَنِيدًا",
      "bangla_trans": "তা কখনো নয়, সে আমার আয়াতসমূহের সাথে শত্রুতা পোষণ করে।",
      "word_by_word": {
        "1": {
          "words_ar": "كَلَّا",
          "translate_bn": "কক্ষণও না"
        },
        "2": {
          "words_ar": "إِنَّهُ",
          "translate_bn": "সে নিশ্চয়"
        },
        "3": {
          "words_ar": "كَانَ",
          "translate_bn": "হল"
        },
        "4": {
          "words_ar": "لِآيَاتِنَا",
          "translate_bn": "আমাদের নিদর্শনাদির প্রতি"
        },
        "5": {
          "words_ar": "عَنِيدًا",
          "translate_bn": "শত্রুতা ভাবাপন্ন"
        }
      },
      "english_trans": "By no means! surely he offers opposition to Our communications."
    },
    "17": {
      "arabic_text": "سَأُرْهِقُهُ صَعُودًا",
      "bangla_trans": "অচিরেই আমি তাকে এক কঠিন স্থানে চড়িয়ে দেব।",
      "word_by_word": {
        "1": {
          "words_ar": "سَأُرْهِقُهُ",
          "translate_bn": "তাকে চড়াব আমি শীঘ্রই"
        },
        "2": {
          "words_ar": "صَعُودًا",
          "translate_bn": "কঠিন চড়াইয়ে"
        }
      },
      "english_trans": "I will make a distressing punishment overtake him."
    },
    "18": {
      "arabic_text": "إِنَّهُ فَكَّرَ وَقَدَّرَ",
      "bangla_trans": "সে চিন্তা-ভাবনা করলো এবং একটা ফন্দি উদ্ভাবনের চেষ্টা করলো।",
      "word_by_word": {
        "1": {
          "words_ar": "إِنَّهُ",
          "translate_bn": "সে নিশ্চয়ই"
        },
        "2": {
          "words_ar": "فَكَّرَ",
          "translate_bn": "চিন্তা করল"
        },
        "3": {
          "words_ar": "وَقَدَّرَ",
          "translate_bn": "এবং সে সিদ্ধান্ত নিল"
        }
      },
      "english_trans": "Surely he reflected and guessed,"
    },
    "19": {
      "arabic_text": "فَقُتِلَ كَيْفَ قَدَّرَ",
      "bangla_trans": "অভিশপ্ত হোক সে, সে কি ধরনের ফন্দি উদ্ভাবনের চেষ্টা করলো?",
      "word_by_word": {
        "1": {
          "words_ar": "فَقُتِلَ",
          "translate_bn": "সে নস্যাৎ তাই হয়েছে"
        },
        "2": {
          "words_ar": "كَيْفَ",
          "translate_bn": "কেমন"
        },
        "3": {
          "words_ar": "قَدَّرَ",
          "translate_bn": "সে সিদ্ধান্ত নিল"
        }
      },
      "english_trans": "But may he be cursed how he plotted;"
    },
    "20": {
      "arabic_text": "ثُمَّ قُتِلَ كَيْفَ قَدَّرَ",
      "bangla_trans": "আবার অভিশপ্ত হোক সে, সে কি ধরনের ফন্দি উদ্ভাবনের চেষ্টা করলো?",
      "word_by_word": {
        "1": {
          "words_ar": "ثُمَّ",
          "translate_bn": "আবারও"
        },
        "2": {
          "words_ar": "قُتِلَ",
          "translate_bn": "মার পড়ল"
        },
        "3": {
          "words_ar": "كَيْفَ",
          "translate_bn": "কেমন"
        },
        "4": {
          "words_ar": "قَدَّرَ",
          "translate_bn": "সিদ্ধান্ত নিল"
        }
      },
      "english_trans": "Again, may he be cursed how he plotted;"
    },
    "21": {
      "arabic_text": "ثُمَّ نَظَرَ",
      "bangla_trans": "অতঃপর সে মানুষের দিকে চেয়ে দেখলো।",
      "word_by_word": {
        "1": {
          "words_ar": "ثُمَّ",
          "translate_bn": "এরপর"
        },
        "2": {
          "words_ar": "نَظَرَ",
          "translate_bn": "সে তাকাল"
        }
      },
      "english_trans": "Then he looked,"
    },
    "22": {
      "arabic_text": "ثُمَّ عَبَسَ وَبَسَرَ",
      "bangla_trans": "তারপর ভ্রুকুঞ্চিত করলো এবং চেহারা বিকৃত করলো।",
      "word_by_word": {
        "1": {
          "words_ar": "ثُمَّ",
          "translate_bn": "পরে"
        },
        "2": {
          "words_ar": "عَبَسَ",
          "translate_bn": "কপাল কুচড়াল"
        },
        "3": {
          "words_ar": "وَبَسَرَ",
          "translate_bn": "ও মুখ বাঁকাল"
        }
      },
      "english_trans": "Then he frowned and scowled,"
    },
    "23": {
      "arabic_text": "ثُمَّ أَدْبَرَ وَاسْتَكْبَرَ",
      "bangla_trans": "অতঃপর পেছন ফিরলো এবং দম্ভ প্রকাশ করলো।",
      "word_by_word": {
        "1": {
          "words_ar": "ثُمَّ",
          "translate_bn": "এরপর"
        },
        "2": {
          "words_ar": "أَدْبَرَ",
          "translate_bn": "সে ফিরল"
        },
        "3": {
          "words_ar": "وَاسْتَكْبَرَ",
          "translate_bn": "এবং অহংকার করল"
        }
      },
      "english_trans": "Then he turned back and was big with pride,"
    },
    "24": {
      "arabic_text": "فَقَالَ إِنْ هَذَا إِلَّا سِحْرٌ يُؤْثَرُ",
      "bangla_trans": "অবশেষে বললোঃ এ তো এক চিরাচরিত যাদু ছাড়া আর কিছুই নয়।",
      "word_by_word": {
        "1": {
          "words_ar": "فَقَالَ",
          "translate_bn": "সে বলল অতঃপর"
        },
        "2": {
          "words_ar": "إِنْ",
          "translate_bn": "নয়"
        },
        "3": {
          "words_ar": "هَٰذَا",
          "translate_bn": "এটা"
        },
        "4": {
          "words_ar": "إِلَّا",
          "translate_bn": "এছাড়া"
        },
        "5": {
          "words_ar": "سِحْرٌ",
          "translate_bn": "জাদু"
        },
        "6": {
          "words_ar": "يُؤْثَرُ",
          "translate_bn": "চলে আসা"
        }
      },
      "english_trans": "~Then he said: This is naught but enchantment, narrated (from others);"
    },
    "25": {
      "arabic_text": "إِنْ هَذَا إِلَّا قَوْلُ الْبَشَرِ",
      "bangla_trans": "এ তো মানুষের কথা মাত্র।",
      "word_by_word": {
        "1": {
          "words_ar": "إِنْ",
          "translate_bn": "নয়"
        },
        "2": {
          "words_ar": "هَٰذَا",
          "translate_bn": "এটা"
        },
        "3": {
