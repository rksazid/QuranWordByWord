{
  "surah_id": 77,
  "verses": {
    "0": {
      "arabic_text": "بِسْمِ اللّٰهِ الرَّحْمٰنِ الرَّحِیْمِ",
      "bangla_trans": "পরম করুণাময় মেহেরবান আল্লাহর নামে",
      "english_trans": "In the name of Allah, the Beneficent, the Merciful."
    },
    "1": {
      "arabic_text": "وَالْمُرْسَلَاتِ عُرْفًا",
      "bangla_trans": "শপথ সে (বাতাসের) যা একের পর এক প্রেরিত হয়।",
      "word_by_word": {
        "1": {
          "words_ar": "وَالْمُرْسَلَاتِ",
          "translate_bn": "শপথ প্রেরিত (বায়ুর)"
        },
        "2": {
          "words_ar": "عُرْفًا",
          "translate_bn": "কল্যাণ সুরূপ"
        }
      },
      "english_trans": "I swear by the emissary winds, sent one after another (for men´s benefit),"
    },
    "2": {
      "arabic_text": "فَالْعَاصِفَاتِ عَصْفًا",
      "bangla_trans": "তারপর ঝড়ের গতিতে প্রবাহিত হয়",
      "word_by_word": {
        "1": {
          "words_ar": "فَالْعَاصِفَاتِ",
          "translate_bn": "অতঃপর ঝটিকার"
        },
        "2": {
          "words_ar": "عَصْفًا",
          "translate_bn": "প্রলংকরী"
        }
      },
      "english_trans": "By the raging hurricanes,"
    },
    "3": {
      "arabic_text": "وَالنَّاشِرَاتِ نَشْرًا",
      "bangla_trans": "এবং (মেঘমালাকে) বহন করে নিয়ে ছড়িয়ে দেয়।",
      "word_by_word": {
        "1": {
          "words_ar": "وَالنَّاشِرَاتِ",
          "translate_bn": "এবং (মেঘপুঞ্জ) বিস্তারকারী (বায়ুর)"
        },
        "2": {
          "words_ar": "نَشْرًا",
          "translate_bn": "বিস্তার করা"
        }
      },
      "english_trans": "Which scatter clouds to their destined places,"
    },
    "4": {
      "arabic_text": "فَالْفَارِقَاتِ فَرْقًا",
      "bangla_trans": "তারপর তাকে ফেঁড়ে বিচ্ছিন্ন করে।",
      "word_by_word": {
        "1": {
          "words_ar": "فَالْفَارِقَاتِ",
          "translate_bn": "প্রৃথককারী (বায়ুর) অতংপর"
        },
        "2": {
          "words_ar": "فَرْقًا",
          "translate_bn": "পৃথক করা (মেঘকে)"
        }
      },
      "english_trans": "Then separate them one from another,"
    },
    "5": {
      "arabic_text": "فَالْمُلْقِيَاتِ ذِكْرًا",
      "bangla_trans": "অতঃপর (মনে আল্লাহর) স্মরণ জাগিয়ে দেয়,",
      "word_by_word": {
        "1": {
          "words_ar": "فَالْمُلْقِيَاتِ",
          "translate_bn": "অতংপর জাগ্রতকারীদের (অন্তরে)"
        },
        "2": {
          "words_ar": "ذِكْرًا",
          "translate_bn": "উপদেশ"
        }
      },
      "english_trans": "Then I swear by the angels who bring down the revelation,"
    },
    "6": {
      "arabic_text": "عُذْرًا أَوْ نُذْرًا",
      "bangla_trans": "ওজর হিসেবে অথবা ভীতি হিসেবে।",
      "word_by_word": {
        "1": {
          "words_ar": "عُذْرًا",
          "translate_bn": "অনুশোচনা করা"
        },
        "2": {
          "words_ar": "أَوْ",
          "translate_bn": "বা"
        },
        "3": {
          "words_ar": "نُذْرًا",
          "translate_bn": "সতর্কতা সুরূপ"
        }
      },
      "english_trans": "To clear or to warn."
    },
    "7": {
      "arabic_text": "إِنَّمَا تُوعَدُونَ لَوَاقِعٌ",
      "bangla_trans": "যে জিনিসের প্রতিশ্রুতি তোমাদের দেয়া হচ্ছে তা অবশ্যই সংঘটিত হবে।",
      "word_by_word": {
        "1": {
          "words_ar": "إِنَّمَا",
          "translate_bn": "(যা) মূলতঃ"
        },
        "2": {
          "words_ar": "تُوعَدُونَ",
          "translate_bn": "তোমাদের ওয়াদা করা হয়েছে"
        },
        "3": {
          "words_ar": "لَوَاقِعٌ",
          "translate_bn": "সংঘটিত হবে অবশ্যই"
        }
      },
      "english_trans": "Most surely what you are threatened with must come to pass."
    },
    "8": {
      "arabic_text": "فَإِذَا النُّجُومُ طُمِسَتْ",
      "bangla_trans": "অতঃপর তারকাসমূহ যখন নিষ্প্রভ হয়ে যাবে ",
      "word_by_word": {
        "1": {
          "words_ar": "فَإِذَا",
          "translate_bn": "যখন অতঃপর"
        },
        "2": {
          "words_ar": "النُّجُومُ",
          "translate_bn": "তারকাসমূহ"
        },
        "3": {
          "words_ar": "طُمِسَتْ",
          "translate_bn": "স্লান করা হবে"
        }
      },
      "english_trans": "So when the stars are made to lose their light,"
    },
    "9": {
      "arabic_text": "وَإِذَا السَّمَاءُ فُرِجَتْ",
      "bangla_trans": "এবং আসমান ফেঁড়ে দেয়া হবে ",
      "word_by_word": {
        "1": {
          "words_ar": "وَإِذَا",
          "translate_bn": "যখন এবং"
        },
        "2": {
          "words_ar": "السَّمَاءُ",
          "translate_bn": "আসমান"
        },
        "3": {
          "words_ar": "فُرِجَتْ",
          "translate_bn": "বিদীর্ণ করা হবে"
        }
      },
      "english_trans": "And when the heaven is rent asunder,"
    },
    "10": {
      "arabic_text": "وَإِذَا الْجِبَالُ نُسِفَتْ",
      "bangla_trans": "আর পাহাড় ধুনিত করা হবে",
      "word_by_word": {
        "1": {
          "words_ar": "وَإِذَا",
          "translate_bn": "যখন এবং"
        },
        "2": {
          "words_ar": "الْجِبَالُ",
          "translate_bn": "পর্বত সমূহকে"
        },
        "3": {
          "words_ar": "نُسِفَتْ",
          "translate_bn": "ধুনে ফেলা হবে"
        }
      },
      "english_trans": "And when the mountains are carried away as dust,"
    },
    "11": {
      "arabic_text": "وَإِذَا الرُّسُلُ أُقِّتَتْ",
      "bangla_trans": "এবং রসূলের হাজির হওয়ার সময় এসে পড়বে। ",
      "word_by_word": {
        "1": {
          "words_ar": "وَإِذَا",
          "translate_bn": "যখন এবং"
        },
        "2": {
          "words_ar": "الرُّسُلُ",
          "translate_bn": "রসুলগণকে"
        },
        "3": {
          "words_ar": "أُقِّتَتْ",
          "translate_bn": "নির্দিষ্ট সময় উপস্থিত করা হবে"
        }
      },
      "english_trans": "And when the messengers are gathered at their appointed time"
    },
    "12": {
      "arabic_text": "لِأَيِّ يَوْمٍ أُجِّلَتْ",
      "bangla_trans": "(সেদিন ঐ ঘটনাটি সংঘটিত হবে) । কোন দিনের জন্য একাজ বিলম্বিত করা হয়েছে?",
      "word_by_word": {
        "1": {
          "words_ar": "لِأَيِّ",
          "translate_bn": "কোন জন্য"
        },
        "2": {
          "words_ar": "يَوْمٍ",
          "translate_bn": "দিনের"
        },
        "3": {
          "words_ar": "أُجِّلَتْ",
          "translate_bn": "স্থগিত করা হয়েছে"
        }
      },
      "english_trans": "To what day is the doom fixed?"
    },
    "13": {
      "arabic_text": "لِيَوْمِ الْفَصْلِ",
      "bangla_trans": "ফায়সালার দিনের জন্য।",
      "word_by_word": {
        "1": {
          "words_ar": "لِيَوْمِ",
          "translate_bn": "দিনের জন্য"
        },
        "2": {
          "words_ar": "الْفَصْلِ",
          "translate_bn": "পৃৃথককারী (ফয়সালার)"
        }
      },
      "english_trans": "To the day of decision."
    },
    "14": {
      "arabic_text": "وَمَا أَدْرَاكَ مَا يَوْمُ الْفَصْلِ",
      "bangla_trans": "তুমি কি জান সে ফায়সালার দিনটি কি?",
      "word_by_word": {
        "1": {
          "words_ar": "وَمَا",
          "translate_bn": "কি এবং"
        },
        "2": {
          "words_ar": "أَدْرَاكَ",
          "translate_bn": "তুমি জানো"
        },
        "3": {
          "words_ar": "مَا",
          "translate_bn": "কি"
        },
        "4": {
          "words_ar": "يَوْمُ",
          "translate_bn": "দিন"
        },
        "5": {
          "words_ar": "الْفَصْلِ",
          "translate_bn": "পৃৃথককারী (ফয়সালার)"
        }
      },
      "english_trans": "And what will make you comprehend what the day of decision is?"
    },
    "15": {
      "arabic_text": "وَيْلٌ يَوْمَئِذٍ لِلْمُكَذِّبِينَ",
      "bangla_trans": "সেদিন ধ্বংস অপেক্ষা করছে মিথ্যা আরোপকারীদের জন্য।",
      "word_by_word": {
        "1": {
          "words_ar": "وَيْلٌ",
          "translate_bn": "ধ্বংস"
        },
        "2": {
          "words_ar": "يَوْمَئِذٍ",
          "translate_bn": "সেইদিন"
        },
        "3": {
          "words_ar": "لِلْمُكَذِّبِينَ",
          "translate_bn": "মিথ্যারোপকারীদের জন্য"
        }
      },
      "english_trans": "Woe on that day to the rejecters."
    },
    "16": {
      "arabic_text": "أَلَمْ نُهْلِكِ الْأَوَّلِينَ",
      "bangla_trans": "আমি কি পূর্ববর্তীদের ধ্বংস করিনি?",
      "word_by_word": {
        "1": {
          "words_ar": "أَلَمْ",
          "translate_bn": "নাই কি"
        },
        "2": {
          "words_ar": "نُهْلِكِ",
          "translate_bn": "ধ্বংস আমরা করি"
        },
        "3": {
          "words_ar": "الْأَوَّلِينَ",
          "translate_bn": "আগের লোকদের"
        }
      },
      "english_trans": "Did We not destroy the former generations?"
    },
    "17": {
      "arabic_text": "ثُمَّ نُتْبِعُهُمُ الْآخِرِينَ",
      "bangla_trans": "আবার পরবর্তী লোকদের তাদের অনুগামী করে দেব। ",
      "word_by_word": {
        "1": {
          "words_ar": "ثُمَّ",
          "translate_bn": "এরপর"
        },
        "2": {
          "words_ar": "نُتْبِعُهُمُ",
          "translate_bn": "তাদের অনুগামি আমরা করব"
        },
        "3": {
          "words_ar": "الْآخِرِينَ",
          "translate_bn": "পর্ববর্তী লোকদের"
        }
      },
      "english_trans": "Then did We follow them up with later ones."
    },
    "18": {
      "arabic_text": "كَذَلِكَ نَفْعَلُ بِالْمُجْرِمِينَ",
      "bangla_trans": "অপরাধীদের সাথে আমরা এরূপই করে থাকি।",
      "word_by_word": {
        "1": {
          "words_ar": "كَذَٰلِكَ",
          "translate_bn": "এরূপ"
        },
        "2": {
          "words_ar": "نَفْعَلُ",
          "translate_bn": "করি আমরা"
        },
        "3": {
          "words_ar": "بِالْمُجْرِمِينَ",
          "translate_bn": "অপরাধিদের সাথে"
        }
      },
      "english_trans": "Even thus shall We deal with the guilty."
    },
    "19": {
      "arabic_text": "وَيْلٌ يَوْمَئِذٍ لِلْمُكَذِّبِينَ",
      "bangla_trans": "সেদিন ধ্বংস অপেক্ষা করছে মিথ্যা আরোপকারীদের জন্য। ",
      "word_by_word": {
        "1": {
          "words_ar": "وَيْلٌ",
          "translate_bn": "ধ্বংস"
        },
        "2": {
          "words_ar": "يَوْمَئِذٍ",
          "translate_bn": "সেদিন"
        },
        "3": {
          "words_ar": "لِلْمُكَذِّبِينَ",
          "translate_bn": "মিথ্যারোপকারীদের জন্য"
        }
      },
      "english_trans": "Woe on that day to the rejecters."
    },
    "20": {
      "arabic_text": "أَلَمْ نَخْلُقْكُمْ مِنْ مَاءٍ مَهِينٍ",
      "bangla_trans": "আমি কি তোমাদেরকে এক নগণ্য পানি থেকে সৃষ্টি করিনি",
      "word_by_word": {
        "1": {
          "words_ar": "أَلَمْ",
          "translate_bn": "নাই কি"
        },
        "2": {
          "words_ar": "نَخْلُقْكُمْ",
          "translate_bn": "তোমাদেরকে সৃষ্টি আমরা করি"
        },
        "3": {
          "words_ar": "مِنْ",
          "translate_bn": "থেকে"
        },
        "4": {
          "words_ar": "مَاءٍ",
          "translate_bn": "পানি"
        },
        "5": {
          "words_ar": "مَهِينٍ",
          "translate_bn": "তুচ্ছ"
        }
      },
      "english_trans": "Did We not create you from contemptible water?"
    },
    "21": {
      "arabic_text": "فَجَعَلْنَاهُ فِي قَرَارٍ مَكِينٍ",
      "bangla_trans": "একটি নির্দিষ্ট জায়গায় তা স্থাপন করেছিলাম না? ",
      "word_by_word": {
        "1": {
          "words_ar": "فَجَعَلْنَاهُ",
          "translate_bn": "তা আমরা আটকিয়ে অতঃপর রেখেছি"
        },
        "2": {
          "words_ar": "فِي",
          "translate_bn": "মধ্যে"
        },
        "3": {
          "words_ar": "قَرَارٍ",
          "translate_bn": "স্থানের"
        },
        "4": {
          "words_ar": "مَكِينٍ",
          "translate_bn": "সংরক্ষিত"
        }
      },
      "english_trans": "Then We placed it in a secure resting-place,"
    },
    "22": {
      "arabic_text": "إِلَى قَدَرٍ مَعْلُومٍ",
      "bangla_trans": "  এবং একটি নির্দিষ্ট সময়ের জন্য  ",
      "word_by_word": {
        "1": {
          "words_ar": "إِلَىٰ",
          "translate_bn": "পর্যন্ত"
        },
        "2": {
          "words_ar": "قَدَرٍ",
          "translate_bn": "সময়"
        },
        "3": {
          "words_ar": "مَعْلُومٍ",
          "translate_bn": "নির্দিষ্ট"
        }
      },
      "english_trans": "Till an appointed term,"
    },
    "23": {
      "arabic_text": "فَقَدَرْنَا فَنِعْمَ الْقَادِرُونَ",
      "bangla_trans": "তাহলে দেখো, আমি তা করতে পেরেছি। অতএব আমি অত্যন্ত নিপুণ ক্ষমতাধর।",
      "word_by_word": {
        "1": {
          "words_ar": "فَقَدَرْنَا",
          "translate_bn": "আমরা ক্ষমতাবান অতএব ছিলাম"
        },
        "2": {
          "words_ar": "فَنِعْمَ",
          "translate_bn": "কত উত্তম অতএব"
        },
        "3": {
          "words_ar": "الْقَادِرُونَ",
          "translate_bn": "ক্ষমতার অধিকারী"
        }
      },
      "english_trans": "So We proportion it-- how well are We at proportioning (things)."
    },
    "24": {
      "arabic_text": "وَيْلٌ يَوْمَئِذٍ لِلْمُكَذِّبِينَ",
      "bangla_trans": "সেদিন ধ্বংস রয়েছে মিথ্যা আরোপকারীদের জন্য।",
      "word_by_word": {
        "1": {
          "words_ar": "وَيْلٌ",
          "translate_bn": "ধ্বংস"
        },
        "2": {
          "words_ar": "يَوْمَئِذٍ",
          "translate_bn": "সেদিন"
        },
        "3": {
          "words_ar": "لِلْمُكَذِّبِينَ",
          "translate_bn": "মিথ্যারোপকারীদের জন্য"
        }
      },
