{
  "surah_id": 78,
  "verses": {
    "0": {
      "arabic_text": "بِسْمِ اللّٰهِ الرَّحْمٰنِ الرَّحِیْمِ",
      "bangla_trans": "পরম করুণাময় মেহেরবান আল্লাহর নামে",
      "english_trans": "In the name of Allah, the Beneficent, the Merciful."
    },
    "1": {
      "arabic_text": "عَمَّ يَتَسَاءَلُونَ",
      "bangla_trans": "এরা কি সম্পর্কে জিজ্ঞাসাবাদ করছে?",
      "word_by_word": {
        "1": {
          "words_ar": "عَمَّ",
          "translate_bn": "কি সম্পর্কে"
        },
        "2": {
          "words_ar": "يَتَسَاءَلُونَ",
          "translate_bn": "তারা পরস্পরকে জিজ্ঞাসা করছে"
        }
      },
      "english_trans": "Of what do they ask one another?"
    },
    "2": {
      "arabic_text": "عَنِ النَّبَإِ الْعَظِيمِ",
      "bangla_trans": "সেই বড় খবরটা সম্পর্কে কি,",
      "word_by_word": {
        "1": {
          "words_ar": "عَنِ",
          "translate_bn": "সম্পর্কে"
        },
        "2": {
          "words_ar": "النَّبَإِ",
          "translate_bn": "সংবাদ"
        },
        "3": {
          "words_ar": "الْعَظِيمِ",
          "translate_bn": "মহা (অর্থাৎ কিয়ামত)"
        }
      },
      "english_trans": "About the great event,"
    },
    "3": {
      "arabic_text": "الَّذِي هُمْ فِيهِ مُخْتَلِفُونَ",
      "bangla_trans": "যে ব্যাপারে এরা নানান ধরনের কথা বলে ও ঠাট্টা-বিদ্রূপ করে ফিরছে?",
      "word_by_word": {
        "1": {
          "words_ar": "الَّذِي",
          "translate_bn": "তা (এমন যে)"
        },
        "2": {
          "words_ar": "هُمْ",
          "translate_bn": "তারা"
        },
        "3": {
          "words_ar": "فِيهِ",
          "translate_bn": "সে বিষয়ে"
        },
        "4": {
          "words_ar": "مُخْتَلِفُونَ",
          "translate_bn": "(নিজেরাই) মতানৈক্যকারী"
        }
      },
      "english_trans": "About which they differ?"
    },
    "4": {
      "arabic_text": "كَلَّا سَيَعْلَمُونَ",
      "bangla_trans": "কখখনো না, শীঘ্রই এরা জানতে পারবে।",
      "word_by_word": {
        "1": {
          "words_ar": "كَلَّا",
          "translate_bn": "কখনও না"
        },
        "2": {
          "words_ar": "سَيَعْلَمُونَ",
          "translate_bn": "তারা শীঘ্র জানবে"
        }
      },
      "english_trans": "Nay! they shall soon come to know"
    },
    "5": {
      "arabic_text": "ثُمَّ كَلَّا سَيَعْلَمُونَ",
      "bangla_trans": "হ্যাঁ, কখখনো না, শীঘ্রই এরা জানতে পারবে।",
      "word_by_word": {
        "1": {
          "words_ar": "ثُمَّ",
          "translate_bn": "আবার (বলি)"
        },
        "2": {
          "words_ar": "كَلَّا",
          "translate_bn": "কখনও না"
        },
        "3": {
          "words_ar": "سَيَعْلَمُونَ",
          "translate_bn": "তারা শীঘ্র জানবে"
        }
      },
      "english_trans": "Nay! Nay! they shall soon know."
    },
    "6": {
      "arabic_text": "أَلَمْ نَجْعَلِ الْأَرْضَ مِهَادًا",
      "bangla_trans": "একথা কি সত্য নয়, আমি যমীনকে বিছানা বানিয়েছি?",
      "word_by_word": {
        "1": {
          "words_ar": "أَلَمْ",
          "translate_bn": "নি কি"
        },
        "2": {
          "words_ar": "نَجْعَلِ",
          "translate_bn": "আমরা বানাই"
        },
        "3": {
          "words_ar": "الْأَرْضَ",
          "translate_bn": "ভূমিকে"
        },
        "4": {
          "words_ar": "مِهَادًا",
          "translate_bn": "বিছানা স্বরূপ"
        }
      },
      "english_trans": "Have We not made the earth an even expanse?"
    },
    "7": {
      "arabic_text": "وَالْجِبَالَ أَوْتَادًا",
      "bangla_trans": "পাহাড়গুলোকে গেঁড়ে দিয়েছি পেরেকের মতো?",
      "word_by_word": {
        "1": {
          "words_ar": "وَالْجِبَالَ",
          "translate_bn": "এবং পাহাড়-পর্বতকে"
        },
        "2": {
          "words_ar": "أَوْتَادًا",
          "translate_bn": "কীলক স্বরূপ"
        }
      },
      "english_trans": "And the mountains as projections (thereon)?"
    },
    "8": {
      "arabic_text": "وَخَلَقْنَاكُمْ أَزْوَاجًا",
      "bangla_trans": "তোমাদের (নারী ও পুরুষ) জোড়ায় জোড়ায় সৃষ্টি করেছি?",
      "word_by_word": {
        "1": {
          "words_ar": "وَخَلَقْنَاكُمْ",
          "translate_bn": "এবং তোমাদেরকে আমরা সৃষ্টি করেছি"
        },
        "2": {
          "words_ar": "أَزْوَاجًا",
          "translate_bn": "জোড়ায় জোড়ায়"
        }
      },
      "english_trans": "And We created you in pairs,"
    },
    "9": {
      "arabic_text": "وَجَعَلْنَا نَوْمَكُمْ سُبَاتًا",
      "bangla_trans": "তোমাদের ঘুমকে করেছি শান্তির বাহন,",
      "word_by_word": {
        "1": {
          "words_ar": "وَجَعَلْنَا",
          "translate_bn": "এবং আমরা বানিয়েছি"
        },
        "2": {
          "words_ar": "نَوْمَكُمْ",
          "translate_bn": "তোমাদের ঘুমকে"
        },
        "3": {
          "words_ar": "سُبَاتًا",
          "translate_bn": "বিশ্রাম (শান্তির বাহন)"
        }
      },
      "english_trans": "And We made your sleep to be rest (to you),"
    },
    "10": {
      "arabic_text": "وَجَعَلْنَا اللَّيْلَ لِبَاسًا",
      "bangla_trans": "রাতকে করেছি আবরণ",
      "word_by_word": {
        "1": {
          "words_ar": "وَجَعَلْنَا",
          "translate_bn": "এবং আমরা বানিয়েছি"
        },
        "2": {
          "words_ar": "اللَّيْلَ",
          "translate_bn": "রাতকে"
        },
        "3": {
          "words_ar": "لِبَاسًا",
          "translate_bn": "আবরণ স্বরূপ"
        }
      },
      "english_trans": "And We made the night to be a covering,"
    },
    "11": {
      "arabic_text": "وَجَعَلْنَا النَّهَارَ مَعَاشًا",
      "bangla_trans": "এবং দিনকে জীবিকা আহরণের সময়?",
      "word_by_word": {
        "1": {
          "words_ar": "وَجَعَلْنَا",
          "translate_bn": "এবং আমরা বানিয়েছি"
        },
        "2": {
          "words_ar": "النَّهَارَ",
          "translate_bn": "দিনকে"
        },
        "3": {
          "words_ar": "مَعَاشًا",
          "translate_bn": "জীবিকা অর্জনের সময়"
        }
      },
      "english_trans": "And We made the day for seeking livelihood."
    },
    "12": {
      "arabic_text": "وَبَنَيْنَا فَوْقَكُمْ سَبْعًا شِدَادًا",
      "bangla_trans": "তোমাদের ওপর সাতটি মজবুত আকাশ স্থাপন করেছি",
      "word_by_word": {
        "1": {
          "words_ar": "وَبَنَيْنَا",
          "translate_bn": "এবং আমরা নির্মাণ করেছি"
        },
        "2": {
          "words_ar": "فَوْقَكُمْ",
          "translate_bn": "তোমাদের উপর"
        },
        "3": {
          "words_ar": "سَبْعًا",
          "translate_bn": "সাত"
        },
        "4": {
          "words_ar": "شِدَادًا",
          "translate_bn": "সুদৃঢ় (আকাশ)"
        }
      },
      "english_trans": "And We made above you seven strong ones,"
    },
    "13": {
      "arabic_text": "وَجَعَلْنَا سِرَاجًا وَهَّاجًا",
      "bangla_trans": "এবং একটি অতি উজ্জ্বল ও উত্তপ্ত বাতি সৃষ্টি করেছি?",
      "word_by_word": {
        "1": {
          "words_ar": "وَجَعَلْنَا",
          "translate_bn": "এবং আমরা বানিয়েছি"
        },
        "2": {
          "words_ar": "سِرَاجًا",
          "translate_bn": "প্রদীপ (সূর্য)"
        },
        "3": {
          "words_ar": "وَهَّاجًا",
          "translate_bn": "উজ্জ্বল"
        }
      },
      "english_trans": "And We made a shining lamp,"
    },
    "14": {
      "arabic_text": "وَأَنْزَلْنَا مِنَ الْمُعْصِرَاتِ مَاءً ثَجَّاجًا",
      "bangla_trans": "আর মেঘমালা থেকে বর্ষণ করেছি অবিরাম বৃষ্টিধারা,",
      "word_by_word": {
        "1": {
          "words_ar": "وَأَنْزَلْنَا",
          "translate_bn": "আমরা বর্ষণ করেছি"
        },
        "2": {
          "words_ar": "مِنَ",
          "translate_bn": "হতে"
        },
        "3": {
          "words_ar": "الْمُعْصِرَاتِ",
          "translate_bn": "মেঘমালা"
        },
        "4": {
          "words_ar": "مَاءً",
          "translate_bn": "পানি"
        },
        "5": {
          "words_ar": "ثَجَّاجًا",
          "translate_bn": "মুষলধারে"
        }
      },
      "english_trans": "And We send down from the clouds water pouring forth abundantly,"
    },
    "15": {
      "arabic_text": "لِنُخْرِجَ بِهِ حَبًّا وَنَبَاتًا",
      "bangla_trans": "যাতে তার সাহায্যে উৎপন্ন করতে পারি  শস্য, শাক সবজি",
      "word_by_word": {
        "1": {
          "words_ar": "لِنُخْرِجَ",
          "translate_bn": "এজন্য যে আমরা বের করব"
        },
        "2": {
          "words_ar": "بِهِ",
          "translate_bn": "তা দিয়ে"
        },
        "3": {
          "words_ar": "حَبًّا",
          "translate_bn": "শস্য"
        },
        "4": {
          "words_ar": "وَنَبَاتًا",
          "translate_bn": "ও উদ্ভিদ"
        }
      },
      "english_trans": "That We may bring forth thereby corn and herbs,"
    },
    "16": {
      "arabic_text": "وَجَنَّاتٍ أَلْفَافًا",
      "bangla_trans": "ও নিবিড় বাগান?",
      "word_by_word": {
        "1": {
          "words_ar": "وَجَنَّاتٍ",
          "translate_bn": "এবং বাগিচাসমূহ"
        },
        "2": {
          "words_ar": "أَلْفَافًا",
          "translate_bn": "ঘনসন্নিবিষ্ট"
        }
      },
      "english_trans": "And gardens dense and luxuriant."
    },
    "17": {
      "arabic_text": "إِنَّ يَوْمَ الْفَصْلِ كَانَ مِيقَاتًا",
      "bangla_trans": "নিঃসন্দেহে বিচারের দিনটি নির্ধারিত হয়েই আছে।",
      "word_by_word": {
        "1": {
          "words_ar": "إِنَّ",
          "translate_bn": "নিশ্চয়ই"
        },
        "2": {
          "words_ar": "يَوْمَ",
          "translate_bn": "দিন"
        },
        "3": {
          "words_ar": "الْفَصْلِ",
          "translate_bn": "বিচারের"
        },
        "4": {
          "words_ar": "كَانَ",
          "translate_bn": "আছে"
        },
        "5": {
          "words_ar": "مِيقَاتًا",
          "translate_bn": "নির্দিষ্ট"
        }
      },
      "english_trans": "Surely the day of decision is (a day) appointed:"
    },
    "18": {
      "arabic_text": "يَوْمَ يُنْفَخُ فِي الصُّورِ فَتَأْتُونَ أَفْوَاجًا",
      "bangla_trans": "যেদিন শিংগায় ফুঁক দেয়া হবে, তোমরা দলে দলে বের হয়ে আসবে।",
      "word_by_word": {
        "1": {
          "words_ar": "يَوْمَ",
          "translate_bn": "সেদিন"
        },
        "2": {
          "words_ar": "يُنْفَخُ",
          "translate_bn": "ফুঁ দেওয়া হবে"
        },
        "3": {
          "words_ar": "فِي",
          "translate_bn": "মধ্যে"
        },
        "4": {
          "words_ar": "الصُّورِ",
          "translate_bn": "শিঙ্গার"
        },
        "5": {
          "words_ar": "فَتَأْتُونَ",
          "translate_bn": "অতঃপর তোমরা আসবে"
        },
        "6": {
          "words_ar": "أَفْوَاجًا",
          "translate_bn": "দলে দলে"
        }
      },
      "english_trans": "The day on which the trumpet shall be blown so you shall come forth in hosts,"
    },
    "19": {
      "arabic_text": "وَفُتِحَتِ السَّمَاءُ فَكَانَتْ أَبْوَابًا",
      "bangla_trans": "আকাশ খুলে দেয়া হবে, ফলে তা কেবল দরজার পর দরজায় পরিণত হবে।",
      "word_by_word": {
        "1": {
          "words_ar": "وَفُتِحَتِ",
          "translate_bn": "এবং সেদিন উন্মুক্ত করা হবে"
        },
        "2": {
          "words_ar": "السَّمَاءُ",
          "translate_bn": "আকাশ"
        },
        "3": {
          "words_ar": "فَكَانَتْ",
          "translate_bn": "অতঃপর তা হবে"
        },
        "4": {
          "words_ar": "أَبْوَابًا",
          "translate_bn": "অনেক দরজা"
        }
      },
      "english_trans": "And the heaven shall be opened so that it shall be all openings,"
    },
    "20": {
      "arabic_text": "وَسُيِّرَتِ الْجِبَالُ فَكَانَتْ سَرَابًا",
      "bangla_trans": "আর পর্বতমালাকে চলমান করা হবে, ফলে তা মরীচিকায় পরিণত হবে।",
      "word_by_word": {
        "1": {
          "words_ar": "وَسُيِّرَتِ",
          "translate_bn": "এবং চালিয়ে দেয়া হবে"
        },
        "2": {
          "words_ar": "الْجِبَالُ",
          "translate_bn": "পাহাড়গুলো"
        },
        "3": {
          "words_ar": "فَكَانَتْ",
          "translate_bn": "অতঃপর তা হবে"
        },
        "4": {
          "words_ar": "سَرَابًا",
          "translate_bn": "মরীচিকা"
        }
      },
      "english_trans": "And the mountains shall be moved off so that they shall remain a mere semblance."
    },
    "21": {
      "arabic_text": "إِنَّ جَهَنَّمَ كَانَتْ مِرْصَادًا",
      "bangla_trans": "আসলে জাহান্নাম একটি ফাঁদ।",
      "word_by_word": {
        "1": {
          "words_ar": "إِنَّ",
          "translate_bn": "নিশ্চয়ই"
        },
        "2": {
          "words_ar": "جَهَنَّمَ",
          "translate_bn": "জাহান্নাম"
        },
        "3": {
          "words_ar": "كَانَتْ",
          "translate_bn": "হলো"
        },
        "4": {
          "words_ar": "مِرْصَادًا",
          "translate_bn": "ঘাঁটি"
        }
      },
      "english_trans": "Surely hell lies in wait,"
    },
    "22": {
      "arabic_text": "لِلطَّاغِينَ مَآبًا",
      "bangla_trans": "বিদ্রোহীদের আবাস।",
      "word_by_word": {
        "1": {
          "words_ar": "لِلطَّاغِينَ",
          "translate_bn": "সীমালঙ্ঘনকারীদের জন্য"
        },
        "2": {
          "words_ar": "مَآبًا",
          "translate_bn": "প্রত্যাবর্তনস্থল"
        }
      },
      "english_trans": "A place of resort for the inordinate,"
    },
    "23": {
      "arabic_text": "لَابِثِينَ فِيهَا أَحْقَابًا",
      "bangla_trans": "সেখানে তারা যুগের পর যুগ পড়ে থাকবে।",
      "word_by_word": {
        "1": {
          "words_ar": "لَابِثِينَ",
          "translate_bn": "তারা অবস্থানকারী হবে"
        },
        "2": {
          "words_ar": "فِيهَا",
          "translate_bn": "তার মধ্যে"
        },
        "3": {
          "words_ar": "أَحْقَابًا",
