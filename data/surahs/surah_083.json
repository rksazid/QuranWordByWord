    },
    "29": {
      "arabic_text": "إِنَّ الَّذِينَ أَجْرَمُوا كَانُوا مِنَ الَّذِينَ آمَنُوا يَضْحَكُونَ",
      "bangla_trans": "অপরাধীরা দুনিয়াতে ঈমানদারদের বিদ্রূপ করতো।",
      "word_by_word": {
        "1": {
          "words_ar": "إِنَّ",
          "translate_bn": "নিশ্চয়ই"
        },
        "2": {
          "words_ar": "الَّذِينَ",
          "translate_bn": "যারা"
        },
        "3": {
          "words_ar": "أَجْرَمُوا",
          "translate_bn": "অপরাধ করেছে"
        },
        "4": {
          "words_ar": "كَانُوا",
          "translate_bn": "তারা ছিলো"
        },
        "5": {
          "words_ar": "مِنَ",
          "translate_bn": "সাথে"
        },
        "6": {
          "words_ar": "الَّذِينَ",
          "translate_bn": "যারা"
        },
        "7": {
          "words_ar": "آمَنُوا",
          "translate_bn": "ঈমান এনেছে"
        },
        "8": {
          "words_ar": "يَضْحَكُونَ",
          "translate_bn": "বিদ্রুপ করত (তাদের সাথে)"
        }
      },
      "english_trans": "Surely they who are guilty used to laugh at those who believe."
    },
    "30": {
      "arabic_text": "وَإِذَا مَرُّوا بِهِمْ يَتَغَامَزُونَ",
      "bangla_trans": "তাদের কাছ দিয়ে যাবার সময় চোখ টিপে তাদের দিকে ইশারা করতো।",
      "word_by_word": {
        "1": {
          "words_ar": "وَإِذَا",
          "translate_bn": "এবং যখন"
        },
        "2": {
          "words_ar": "مَرُّوا",
          "translate_bn": "অতিক্রম করত"
        },
        "3": {
          "words_ar": "بِهِمْ",
          "translate_bn": "তাদের কাছ দিয়ে"
