{
  "surah_id": 83,
  "verses": {
    "0": {
      "arabic_text": "بِسْمِ اللّٰهِ الرَّحْمٰنِ الرَّحِیْمِ",
      "bangla_trans": "পরম করুণাময় মেহেরবান আল্লাহর নামে",
      "english_trans": "In the name of Allah, the Beneficent, the Merciful."
    },
    "1": {
      "arabic_text": "وَيْلٌ لِلْمُطَفِّفِينَ",
      "bangla_trans": "ধ্বংস তাদের জন্য যারা মাপে কম দেয়।",
      "word_by_word": {
        "1": {
          "words_ar": "وَيْلٌ",
          "translate_bn": "দুর্ভোগ"
        },
        "2": {
          "words_ar": "لِلْمُطَفِّفِينَ",
          "translate_bn": "যারা ওজনে মাপে কম দেয়"
        }
      },
      "english_trans": "Woe to the defrauders,"
    },
    "2": {
      "arabic_text": "الَّذِينَ إِذَا اكْتَالُوا عَلَى النَّاسِ يَسْتَوْفُونَ",
      "bangla_trans": "তাদের অবস্থা এই যে, লোকদের থেকে নেবার সময় পুরোমাত্রায় নেয়",
      "word_by_word": {
        "1": {
          "words_ar": "الَّذِينَ",
          "translate_bn": "যারা"
        },
        "2": {
          "words_ar": "إِذَا",
          "translate_bn": "যখন"
        },
        "3": {
          "words_ar": "اكْتَالُوا",
          "translate_bn": "মেপে নেয়"
        },
        "4": {
          "words_ar": "عَلَى",
          "translate_bn": "থেকে"
        },
        "5": {
          "words_ar": "النَّاسِ",
          "translate_bn": "লোকদের"
        },
        "6": {
          "words_ar": "يَسْتَوْفُونَ",
          "translate_bn": "তারা পূর্ণমাত্রায় নেয়"
        }
      },
      "english_trans": "Who, when they take the measure (of their dues) from men take it fully,"
    },
    "3": {
      "arabic_text": "وَإِذَا كَالُوهُمْ أَوْ وَزَنُوهُمْ يُخْسِرُونَ",
      "bangla_trans": "এবং তাদেরকে ওজন করে বা মেপে দেবার সময় কম করে দেয়।",
      "word_by_word": {
        "1": {
          "words_ar": "وَإِذَا",
          "translate_bn": "কিন্তু যখন"
        },
        "2": {
          "words_ar": "كَالُوهُمْ",
          "translate_bn": "তাদের মেপে দেয়"
        },
        "3": {
          "words_ar": "أَوْ",
          "translate_bn": "বা"
        },
        "4": {
          "words_ar": "وَزَنُوهُمْ",
          "translate_bn": "তাদের ওজন করে দেয়"
        },
        "5": {
          "words_ar": "يُخْسِرُونَ",
          "translate_bn": "তারা কম করে দেয়"
        }
      },
      "english_trans": "But when they measure out to others or weigh out for them, they are deficient."
    },
    "4": {
      "arabic_text": "أَلَا يَظُنُّ أُولَئِكَ أَنَّهُمْ مَبْعُوثُونَ",
      "bangla_trans": "এরা কি চিন্তা করে না, একটি মহাদিবসে",
      "word_by_word": {
        "1": {
          "words_ar": "أَلَا",
          "translate_bn": "না কি"
        },
        "2": {
          "words_ar": "يَظُنُّ",
          "translate_bn": "চিন্তা করে"
        },
        "3": {
          "words_ar": "أُولَٰئِكَ",
          "translate_bn": "ঐসব লোকেরা"
        },
        "4": {
          "words_ar": "أَنَّهُمْ",
          "translate_bn": "যে তারা"
        },
        "5": {
          "words_ar": "مَبْعُوثُونَ",
          "translate_bn": "আবার ওঠানো হবে"
        }
      },
      "english_trans": "Do not these think that they shall be raised again"
    },
    "5": {
      "arabic_text": "لِيَوْمٍ عَظِيمٍ",
      "bangla_trans": "এদেরকে উঠিয়ে আনা হবে?",
      "word_by_word": {
        "1": {
          "words_ar": "لِيَوْمٍ",
          "translate_bn": "দিনের জন্যে"
        },
        "2": {
          "words_ar": "عَظِيمٍ",
          "translate_bn": "এক মহা"
        }
      },
      "english_trans": "For a mighty day,"
    },
    "6": {
      "arabic_text": "يَوْمَ يَقُومُ النَّاسُ لِرَبِّ الْعَالَمِينَ",
      "bangla_trans": "যেদিন সমস্ত মানুষ রব্বুল আলামীনের সামনে দাঁড়াবে।",
      "word_by_word": {
        "1": {
          "words_ar": "يَوْمَ",
          "translate_bn": "যেদিন"
        },
        "2": {
          "words_ar": "يَقُومُ",
          "translate_bn": "দাঁড়াবে"
        },
        "3": {
          "words_ar": "النَّاسُ",
          "translate_bn": "মানুষ"
        },
        "4": {
          "words_ar": "لِرَبِّ",
          "translate_bn": "রবের সামনে"
        },
        "5": {
          "words_ar": "الْعَالَمِينَ",
          "translate_bn": "বিশ্বজগতের"
        }
      },
      "english_trans": "The day on which men shall stand before the Lord of the worlds?"
    },
    "7": {
      "arabic_text": "كَلَّا إِنَّ كِتَابَ الْفُجَّارِ لَفِي سِجِّينٍ",
      "bangla_trans": "কখ্খনো নয়, নিশ্চিতভাবেই পাপীদের আমলনামা কয়েদখানার দফতরে রয়েছে।",
      "word_by_word": {
        "1": {
          "words_ar": "كَلَّا",
          "translate_bn": "কখনও না"
        },
        "2": {
          "words_ar": "إِنَّ",
          "translate_bn": "নিশ্চয়ই"
        },
        "3": {
          "words_ar": "كِتَابَ",
          "translate_bn": "আমলনামা"
        },
        "4": {
          "words_ar": "الْفُجَّارِ",
          "translate_bn": "পাপীদের"
        },
        "5": {
          "words_ar": "لَفِي",
          "translate_bn": "অবশ্যই মধ্যে (আছে)"
        },
        "6": {
          "words_ar": "سِجِّينٍ",
          "translate_bn": "কয়েদখানার"
        }
      },
      "english_trans": "Nay! most surely the record of the wicked is in the Sijjin."
    },
    "8": {
      "arabic_text": "وَمَا أَدْرَاكَ مَا سِجِّينٌ",
      "bangla_trans": "আর তুমি কি জানো সেই কয়েদখানার দফতরটা কি?",
      "word_by_word": {
        "1": {
          "words_ar": "وَمَا",
          "translate_bn": "এবং কিসে"
        },
        "2": {
          "words_ar": "أَدْرَاكَ",
          "translate_bn": "তোমাকে বুঝাবে জানাবে"
        },
        "3": {
          "words_ar": "مَا",
          "translate_bn": "(কি) সেই"
        },
        "4": {
          "words_ar": "سِجِّينٌ",
          "translate_bn": "কয়েদখানা"
        }
      },
      "english_trans": "And what will make you know what the Sijjin is?"
    },
    "9": {
      "arabic_text": "كِتَابٌ مَرْقُومٌ",
      "bangla_trans": "একটি লিখিত কিতাব।",
      "word_by_word": {
        "1": {
          "words_ar": "كِتَابٌ",
          "translate_bn": "খাতা আমলনামা"
        },
        "2": {
          "words_ar": "مَرْقُومٌ",
          "translate_bn": "চিহ্নিত"
        }
      },
      "english_trans": "It is a written book."
    },
    "10": {
      "arabic_text": "وَيْلٌ يَوْمَئِذٍ لِلْمُكَذِّبِينَ",
      "bangla_trans": "সেদিন মিথ্যা আরোপকারীদের জন্য ধ্বংস সুনিশ্চিত,",
      "word_by_word": {
        "1": {
          "words_ar": "وَيْلٌ",
          "translate_bn": "ধ্বংস"
        },
        "2": {
          "words_ar": "يَوْمَئِذٍ",
          "translate_bn": "সেদিন"
        },
        "3": {
          "words_ar": "لِلْمُكَذِّبِينَ",
          "translate_bn": "মিথ্যারোপকারীদের জন্যে"
        }
      },
      "english_trans": "Woe on that day to the rejecters,"
    },
    "11": {
      "arabic_text": "الَّذِينَ يُكَذِّبُونَ بِيَوْمِ الدِّينِ",
      "bangla_trans": "যারা কর্মফল দেবার দিনটিকে মিথ্যা বলেছে।",
      "word_by_word": {
        "1": {
          "words_ar": "الَّذِينَ",
          "translate_bn": "যারা"
        },
        "2": {
          "words_ar": "يُكَذِّبُونَ",
          "translate_bn": "মিথ্যারোপ করে"
        },
        "3": {
          "words_ar": "بِيَوْمِ",
          "translate_bn": "দিন সম্পর্কে"
        },
        "4": {
          "words_ar": "الدِّينِ",
          "translate_bn": "বিচারের"
        }
      },
      "english_trans": "Who give the lie to the day of judgment."
    },
    "12": {
      "arabic_text": "وَمَا يُكَذِّبُ بِهِ إِلَّا كُلُّ مُعْتَدٍ أَثِيمٍ",
      "bangla_trans": "আর সীমালংঘনকারী পাপী ছাড়া কেই একে মিথ্যা বলে না।",
      "word_by_word": {
        "1": {
          "words_ar": "وَمَا",
          "translate_bn": "এবং না"
        },
        "2": {
          "words_ar": "يُكَذِّبُ",
          "translate_bn": "মিথ্যারোপ করে"
        },
        "3": {
          "words_ar": "بِهِ",
          "translate_bn": "এতে"
        },
        "4": {
          "words_ar": "إِلَّا",
          "translate_bn": "এ ছাড়া"
        },
        "5": {
          "words_ar": "كُلُّ",
          "translate_bn": "প্রত্যেক"
        },
        "6": {
          "words_ar": "مُعْتَدٍ",
          "translate_bn": "সীমালঙ্ঘনকারী"
        },
        "7": {
          "words_ar": "أَثِيمٍ",
          "translate_bn": "পাপী"
        }
      },
      "english_trans": "And none gives the lie to it but every exceeder of limits, sinful one"
    },
    "13": {
      "arabic_text": "إِذَا تُتْلَى عَلَيْهِ آيَاتُنَا قَالَ أَسَاطِيرُ الْأَوَّلِينَ",
      "bangla_trans": "তাকে যখন আমার আয়াত শুনানো হয়  সে বলে, এ তো আগের কালের গল্প।",
      "word_by_word": {
        "1": {
          "words_ar": "إِذَا",
          "translate_bn": "যখন"
        },
        "2": {
          "words_ar": "تُتْلَىٰ",
          "translate_bn": "পাঠ করা হয়"
        },
        "3": {
          "words_ar": "عَلَيْهِ",
          "translate_bn": "তার উপর"
        },
        "4": {
          "words_ar": "آيَاتُنَا",
          "translate_bn": "আমাদের আয়াতসমূহ"
        },
        "5": {
          "words_ar": "قَالَ",
          "translate_bn": "সে বলে"
        },
        "6": {
          "words_ar": "أَسَاطِيرُ",
          "translate_bn": "(এসব) উপকথা"
        },
        "7": {
          "words_ar": "الْأَوَّلِينَ",
          "translate_bn": "পূর্ববর্তীদের"
        }
      },
      "english_trans": "When Our communications are recited to him, he says: Stories of those of yore."
    },
    "14": {
      "arabic_text": "كَلَّا بَلْ رَانَ عَلَى قُلُوبِهِمْ مَا كَانُوا يَكْسِبُونَ",
      "bangla_trans": "কখ্খনো নয়, বরং এদের খারাপ কাজের জং ধরেছে।",
      "word_by_word": {
        "1": {
          "words_ar": "كَلَّا",
          "translate_bn": "কখনও না"
        },
        "2": {
          "words_ar": "بَلْ",
          "translate_bn": "বরং"
        },
        "3": {
          "words_ar": "رَانَ",
          "translate_bn": "মরচে ধরিয়েছে"
        },
        "4": {
          "words_ar": "عَلَىٰ",
          "translate_bn": "উপর"
        },
        "5": {
          "words_ar": "قُلُوبِهِمْ",
          "translate_bn": "তাদের অন্তরগুলোর"
        },
        "6": {
          "words_ar": "مَا",
          "translate_bn": "যা"
        },
        "7": {
          "words_ar": "كَانُوا",
          "translate_bn": "করছিল"
        },
        "8": {
          "words_ar": "يَكْسِبُونَ",
          "translate_bn": "তারা অর্জন"
        }
      },
      "english_trans": "Nay! rather, what they used to do has become like rust upon their hearts."
    },
    "15": {
      "arabic_text": "كَلَّا إِنَّهُمْ عَنْ رَبِّهِمْ يَوْمَئِذٍ لَمَحْجُوبُونَ",
      "bangla_trans": "কখ্খনো নয়, নিশ্চিতভাবেই সেদিন তাদের রবের দর্শন থেকে বঞ্চিত রাখা হবে।",
      "word_by_word": {
        "1": {
          "words_ar": "كَلَّا",
          "translate_bn": "কখনও না"
        },
        "2": {
          "words_ar": "إِنَّهُمْ",
          "translate_bn": "নিশ্চয়ই তারা"
        },
        "3": {
          "words_ar": "عَنْ",
          "translate_bn": "থেকে"
        },
        "4": {
          "words_ar": "رَبِّهِمْ",
          "translate_bn": "তাদের রবের"
        },
        "5": {
          "words_ar": "يَوْمَئِذٍ",
          "translate_bn": "সেদিন"
        },
        "6": {
          "words_ar": "لَمَحْجُوبُونَ",
          "translate_bn": "তারা দর্শন বঞ্চিত হবেই"
        }
      },
      "english_trans": "Nay! most surely they shall on that day be debarred from their Lord."
    },
    "16": {
      "arabic_text": "ثُمَّ إِنَّهُمْ لَصَالُو الْجَحِيمِ",
      "bangla_trans": "তারপর তারা গিয়ে পড়বে জাহান্নামের মধ্যে।",
      "word_by_word": {
        "1": {
          "words_ar": "ثُمَّ",
          "translate_bn": "অতঃপর"
        },
        "2": {
          "words_ar": "إِنَّهُمْ",
          "translate_bn": "নিশ্চয়ই তারা"
        },
        "3": {
          "words_ar": "لَصَالُو",
          "translate_bn": "অবশ্যই প্রবেশ করবে"
        },
        "4": {
          "words_ar": "الْجَحِيمِ",
          "translate_bn": "জাহান্নামে"
        }
      },
      "english_trans": "Then most surely they shall enter the burning fire."
    },
    "17": {
      "arabic_text": "ثُمَّ يُقَالُ هَذَا الَّذِي كُنْتُمْ بِهِ تُكَذِّبُونَ",
      "bangla_trans": "এরপর তাদেরকে বলা হবে, এটি সেই জিনিস যাকে তোমরা মিথ্যা বলতে।",
      "word_by_word": {
        "1": {
          "words_ar": "ثُمَّ",
          "translate_bn": "অতঃপর"
        },
        "2": {
          "words_ar": "يُقَالُ",
          "translate_bn": "(তাদেরকে) বলা হবে"
        },
        "3": {
          "words_ar": "هَٰذَا",
          "translate_bn": "এই"
        },
        "4": {
          "words_ar": "الَّذِي",
          "translate_bn": "সেই (দিন)"
        },
        "5": {
          "words_ar": "كُنْتُمْ",
          "translate_bn": "তোমরা ছিলে"
        },
        "6": {
          "words_ar": "بِهِ",
          "translate_bn": "যে ব্যাপারে"
        },
        "7": {
          "words_ar": "تُكَذِّبُونَ",
          "translate_bn": "মিথ্যারোপ করতে"
        }
      },
      "english_trans": "Then shall it be said: This is what you gave the lie to."
    },
    "18": {
      "arabic_text": "كَلَّا إِنَّ كِتَابَ الْأَبْرَارِ لَفِي عِلِّيِّينَ",
      "bangla_trans": "কখ্খনো নয়, অবশ্যি নেক লোকদের আমলনামা উন্নত মর্যাদাসম্পন্ন লোকদের দফতরে রয়েছে।",
      "word_by_word": {
        "1": {
          "words_ar": "كَلَّا",
          "translate_bn": "কখনও না"
        },
        "2": {
          "words_ar": "إِنَّ",
          "translate_bn": "নিশ্চয়ই"
        },
        "3": {
          "words_ar": "كِتَابَ",
          "translate_bn": "আমলনামা"
        },
        "4": {
