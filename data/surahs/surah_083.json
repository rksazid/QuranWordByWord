        "2": {
          "words_ar": "الَّذِينَ",
          "translate_bn": "(সেদিন) যারা"
        },
        "3": {
          "words_ar": "آمَنُوا",
          "translate_bn": "ঈমান এনেছিলো"
        },
        "4": {
          "words_ar": "مِنَ",
          "translate_bn": "সাথে"
        },
        "5": {
          "words_ar": "الْكُفَّارِ",
          "translate_bn": "কাফেরদের"
        },
        "6": {
          "words_ar": "يَضْحَكُونَ",
          "translate_bn": "উপহাস করবে"
        }
      },
      "english_trans": "So today those who believe shall laugh at the unbelievers;"
    },
    "35": {
      "arabic_text": "عَلَى الْأَرَائِكِ يَنْظُرُونَ",
      "bangla_trans": "সুসজ্জিত আসনে বসে তাদের অবস্থা দেখছে।",
      "word_by_word": {
        "1": {
          "words_ar": "عَلَى",
          "translate_bn": "উপর"
