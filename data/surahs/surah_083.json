        "2": {
          "words_ar": "أُرْسِلُوا",
          "translate_bn": "পাঠানো হয়েছে (কাফেরদেরকে)"
        },
        "3": {
          "words_ar": "عَلَيْهِمْ",
          "translate_bn": "তাদের উপর"
        },
        "4": {
          "words_ar": "حَافِظِينَ",
          "translate_bn": "তত্ত্বাবধায়ক রূপে"
