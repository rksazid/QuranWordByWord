{
  "surah_id": 85,
  "verses": {
    "0": {
      "arabic_text": "بِسْمِ اللّٰهِ الرَّحْمٰنِ الرَّحِیْمِ",
      "bangla_trans": "পরম করুণাময় মেহেরবান আল্লাহর নামে",
      "english_trans": "In the name of Allah, the Beneficent, the Merciful."
    },
    "1": {
      "arabic_text": "وَالسَّمَاءِ ذَاتِ الْبُرُوجِ",
      "bangla_trans": "কসম মজবুত দুর্গ বিশিষ্ট আকাশের",
      "word_by_word": {
        "1": {
          "words_ar": "وَالسَّمَاءِ",
          "translate_bn": "শপথ আকাশের"
        },
        "2": {
          "words_ar": "ذَاتِ",
          "translate_bn": "বিশিষ্ট"
        },
        "3": {
          "words_ar": "الْبُرُوجِ",
          "translate_bn": "বুরুজ গ্রহ-নক্ষত্র"
        }
      },
      "english_trans": "I swear by the mansions of the stars,"
    },
    "2": {
      "arabic_text": "وَالْيَوْمِ الْمَوْعُودِ",
      "bangla_trans": "এবং সেই দিনের যার ওয়াদা করা হয়েছে ",
      "word_by_word": {
        "1": {
          "words_ar": "وَالْيَوْمِ",
          "translate_bn": "এবং দিনের"
        },
        "2": {
          "words_ar": "الْمَوْعُودِ",
          "translate_bn": "প্রতিশ্রুত"
        }
      },
      "english_trans": "And the promised day,"
    },
    "3": {
      "arabic_text": "وَشَاهِدٍ وَمَشْهُودٍ",
      "bangla_trans": "আর যে দেখে তার এবং সেই জিনিসের যা দেখা যায়।",
      "word_by_word": {
        "1": {
          "words_ar": "وَشَاهِدٍ",
          "translate_bn": "শপথ দর্শকের"
        },
        "2": {
          "words_ar": "وَمَشْهُودٍ",
          "translate_bn": "ও যা পরিদৃষ্ট হয়"
        }
      },
      "english_trans": "And the bearer of witness and those against whom the witness is borne."
    },
    "4": {
      "arabic_text": "قُتِلَ أَصْحَابُ الْأُخْدُودِ",
      "bangla_trans": "মারা পড়েছে গর্তওয়ালারা যে গর্তে দাউ দাউ করে জ্বলা জ্বালানীর আগুন ছিল,",
      "word_by_word": {
        "1": {
          "words_ar": "قُتِلَ",
          "translate_bn": "ধ্বংস হয়েছে"
        },
        "2": {
          "words_ar": "أَصْحَابُ",
          "translate_bn": "কর্তারা অধিপতিরা"
        },
        "3": {
          "words_ar": "الْأُخْدُودِ",
          "translate_bn": "গর্তের"
        }
      },
      "english_trans": "Cursed be the makers of the pit,"
    },
    "5": {
      "arabic_text": "النَّارِ ذَاتِ الْوَقُودِ",
      "bangla_trans": "যখন তারা সেই গর্তের কিনারে বসেছিল",
      "word_by_word": {
        "1": {
          "words_ar": "النَّارِ",
          "translate_bn": "আগুনের"
        },
        "2": {
          "words_ar": "ذَاتِ",
          "translate_bn": "বিশিষ্ট"
        },
        "3": {
          "words_ar": "الْوَقُودِ",
          "translate_bn": "(প্রজ্জ্বলিত) ইন্ধন"
        }
      },
      "english_trans": "Of the fire (kept burning) with fuel,"
    },
    "6": {
      "arabic_text": "إِذْ هُمْ عَلَيْهَا قُعُودٌ",
      "bangla_trans": "এবং ঈমানদারদের সাথে",
      "word_by_word": {
        "1": {
          "words_ar": "إِذْ",
          "translate_bn": "যখন"
        },
        "2": {
          "words_ar": "هُمْ",
          "translate_bn": "তারা (ছিল)"
        },
        "3": {
          "words_ar": "عَلَيْهَا",
          "translate_bn": "তার পাশে"
        },
        "4": {
          "words_ar": "قُعُودٌ",
          "translate_bn": "উপবিষ্ট"
        }
      },
      "english_trans": "When they sat by it,"
    },
    "7": {
      "arabic_text": "وَهُمْ عَلَى مَا يَفْعَلُونَ بِالْمُؤْمِنِينَ شُهُودٌ",
      "bangla_trans": "তারা সবকিছু করছিল তা দেখছিল।",
      "word_by_word": {
        "1": {
          "words_ar": "وَهُمْ",
          "translate_bn": "এবং তারা (ছিল)"
        },
        "2": {
          "words_ar": "عَلَىٰ",
          "translate_bn": "ঐ সম্পর্কে"
        },
        "3": {
          "words_ar": "مَا",
          "translate_bn": "যা"
        },
        "4": {
          "words_ar": "يَفْعَلُونَ",
          "translate_bn": "তারা করছিল"
        },
        "5": {
          "words_ar": "بِالْمُؤْمِنِينَ",
          "translate_bn": "মুমিনদের সাথে"
        },
        "6": {
          "words_ar": "شُهُودٌ",
          "translate_bn": "প্রত্যক্ষকারী"
        }
      },
      "english_trans": "And they were witnesses of what they did with the believers."
    },
    "8": {
      "arabic_text": "وَمَا نَقَمُوا مِنْهُمْ إِلَّا أَنْ يُؤْمِنُوا بِاللَّهِ الْعَزِيزِ الْحَمِيدِ",
      "bangla_trans": "ওই ঈমানদারদের সাথে তাদের শত্রুতার এছাড়া আর কোন কারণ ছিল না যে, তারা সেই আল্লাহর প্রতি ঈমান এনেছিল",
      "word_by_word": {
        "1": {
          "words_ar": "وَمَا",
          "translate_bn": "এবং না"
        },
        "2": {
          "words_ar": "نَقَمُوا",
          "translate_bn": "তারা প্রতিশোধ নিয়েছিল"
        },
        "3": {
          "words_ar": "مِنْهُمْ",
          "translate_bn": "তাদের থেকে (অন্য কারণে)"
        },
        "4": {
          "words_ar": "إِلَّا",
          "translate_bn": "এ ছাড়া"
        },
        "5": {
          "words_ar": "أَنْ",
          "translate_bn": "যে"
        },
        "6": {
          "words_ar": "يُؤْمِنُوا",
          "translate_bn": "তারা ঈমান এনেছে"
        },
        "7": {
          "words_ar": "بِاللَّهِ",
          "translate_bn": "আল্লাহর উপর"
        },
        "8": {
          "words_ar": "الْعَزِيزِ",
          "translate_bn": "পরাক্রমশালী"
        },
        "9": {
          "words_ar": "الْحَمِيدِ",
          "translate_bn": "প্রশংসিত"
        }
      },
      "english_trans": "And they did not take vengeance on them for aught except that they believed in Allah, the Mighty, the Praised,"
    },
    "9": {
      "arabic_text": "الَّذِي لَهُ مُلْكُ السَّمَاوَاتِ وَالْأَرْضِ وَاللَّهُ عَلَى كُلِّ شَيْءٍ شَهِيدٌ",
      "bangla_trans": "যিনি মহাপরাক্রমশালী এবং নিজের সত্তায় নিজেই প্রশংসিত, যিনি আকাশ ও পৃথিবীর রাজত্বের অধিকারী। আর সে আল্লাহ‌ সবকিছু দেখছেন।",
      "word_by_word": {
        "1": {
          "words_ar": "الَّذِي",
          "translate_bn": "যিনি (এমন সত্তা যে)"
        },
        "2": {
          "words_ar": "لَهُ",
          "translate_bn": "তাঁরই জন্য"
        },
        "3": {
          "words_ar": "مُلْكُ",
          "translate_bn": "রাজত্ব"
        },
        "4": {
          "words_ar": "السَّمَاوَاتِ",
          "translate_bn": "আকাশমণ্ডলীর"
        },
        "5": {
          "words_ar": "وَالْأَرْضِ",
          "translate_bn": "ও পৃথিবীর"
        },
        "6": {
          "words_ar": "وَاللَّهُ",
          "translate_bn": "এবং আল্লাহই"
        },
        "7": {
          "words_ar": "عَلَىٰ",
          "translate_bn": "উপর"
        },
        "8": {
          "words_ar": "كُلِّ",
          "translate_bn": "সব"
        },
        "9": {
          "words_ar": "شَيْءٍ",
          "translate_bn": "কিছুর"
        },
        "10": {
          "words_ar": "شَهِيدٌ",
          "translate_bn": "সূক্ষ্মদর্শী"
        }
      },
      "english_trans": "Whose is the kingdom of the heavens and the earth; and Allah is a Witness of all things."
    },
    "10": {
      "arabic_text": "إِنَّ الَّذِينَ فَتَنُوا الْمُؤْمِنِينَ وَالْمُؤْمِنَاتِ ثُمَّ لَمْ يَتُوبُوا فَلَهُمْ عَذَابُ جَهَنَّمَ وَلَهُمْ عَذَابُ الْحَرِيقِ",
      "bangla_trans": "যারা মু’মিন পুরুষ ও নারীদের ওপর জুলুম-নিপীড়ন চালিয়েছে, তারপর তা থেকে তওবা করেনি, নিশ্চিতভাবেই তাদের জন্য রয়েছে জাহান্নামের আযাব এবং জ্বালা-পোড়ার শাস্তি।",
      "word_by_word": {
        "1": {
          "words_ar": "إِنَّ",
          "translate_bn": "নিশ্চয়ই"
        },
        "2": {
          "words_ar": "الَّذِينَ",
          "translate_bn": "যারা"
        },
        "3": {
          "words_ar": "فَتَنُوا",
          "translate_bn": "নির্যাতন করেছিল"
        },
        "4": {
          "words_ar": "الْمُؤْمِنِينَ",
          "translate_bn": "মুমিনদের"
        },
        "5": {
          "words_ar": "وَالْمُؤْمِنَاتِ",
          "translate_bn": "ও মুমিনাদের (উপর)"
        },
        "6": {
          "words_ar": "ثُمَّ",
          "translate_bn": "অতঃপর"
        },
        "7": {
          "words_ar": "لَمْ",
          "translate_bn": "নি"
        },
        "8": {
          "words_ar": "يَتُوبُوا",
          "translate_bn": "তওবা করে"
        },
        "9": {
          "words_ar": "فَلَهُمْ",
          "translate_bn": "তাদের জন্যে (রয়েছে) তাই"
        },
        "10": {
          "words_ar": "عَذَابُ",
          "translate_bn": "শাস্তি"
        },
        "11": {
          "words_ar": "جَهَنَّمَ",
          "translate_bn": "জাহান্নামের"
        },
        "12": {
          "words_ar": "وَلَهُمْ",
          "translate_bn": "ও তাদের জন্যে (রয়েছে)"
        },
        "13": {
          "words_ar": "عَذَابُ",
          "translate_bn": "শাস্তি"
        },
        "14": {
          "words_ar": "الْحَرِيقِ",
          "translate_bn": "দহনের"
        }
      },
      "english_trans": "Surely (as for) those who persecute the believing men and the believing women, then do not repent, they shall have the chastisement of hell, and they shall have the chastisement of burning."
    },
    "11": {
      "arabic_text": "إِنَّ الَّذِينَ آمَنُوا وَعَمِلُوا الصَّالِحَاتِ لَهُمْ جَنَّاتٌ تَجْرِي مِنْ تَحْتِهَا الْأَنْهَارُ ذَلِكَ الْفَوْزُ الْكَبِيرُ",
      "bangla_trans": "যারা ঈমান এনেছে ও সৎকাজ করেছে নিশ্চিতভাবেই তাদের জন্য রয়েছে জান্নাতের বাগান যার নিম্নদেশে প্রবাহিত হতে থাকবে ঝরণাধারা। এটিই বড় সাফল্য।",
      "word_by_word": {
