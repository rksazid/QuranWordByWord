        "1": {
          "words_ar": "وَهُوَ",
          "translate_bn": "এবং তিনিই"
        },
        "2": {
          "words_ar": "الْغَفُورُ",
          "translate_bn": "ক্ষমাশীল"
        },
        "3": {
          "words_ar": "الْوَدُودُ",
          "translate_bn": "প্রেমময়"
        }
