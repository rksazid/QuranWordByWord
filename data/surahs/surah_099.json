{
  "surah_id": 99,
  "verses": {
    "0": {
      "arabic_text": "بِسْمِ اللّٰهِ الرَّحْمٰنِ الرَّحِیْمِ",
      "bangla_trans": "পরম করুণাময় মেহেরবান আল্লাহর নামে",
      "english_trans": "In the name of Allah, the Beneficent, the Merciful."
    },
    "1": {
      "arabic_text": "إِذَا زُلْزِلَتِ الْأَرْضُ زِلْزَالَهَا",
      "bangla_trans": "যখন পৃথিবীকে প্রবলবেগে ঝাঁকুনি দেয়া হবে।",
      "word_by_word": {
        "1": {
          "words_ar": "إِذَا",
          "translate_bn": "যখন"
        },
        "2": {
          "words_ar": "زُلْزِلَتِ",
          "translate_bn": "প্রকম্পিত হবে"
        },
        "3": {
          "words_ar": "الْأَرْضُ",
          "translate_bn": "পৃথিবী"
        },
        "4": {
          "words_ar": "زِلْزَالَهَا",
          "translate_bn": "তার (ভীষণ) কম্পনে"
        }
      },
      "english_trans": "When the earth is shaken with her (violent) shaking,"
    },
    "2": {
      "arabic_text": "وَأَخْرَجَتِ الْأَرْضُ أَثْقَالَهَا",
      "bangla_trans": "পৃথিবী তার ভেতরের সমস্ত ভার বাইরে বের করে দেবে।",
      "word_by_word": {
        "1": {
          "words_ar": "وَأَخْرَجَتِ",
          "translate_bn": "এবং বের করবে"
        },
        "2": {
          "words_ar": "الْأَرْضُ",
          "translate_bn": "পৃথিবী"
        },
        "3": {
          "words_ar": "أَثْقَالَهَا",
          "translate_bn": "বোঝাগুলোকে তার"
        }
      },
      "english_trans": "And the earth brings forth her burdens,"
    },
    "3": {
      "arabic_text": "وَقَالَ الْإِنْسَانُ مَا لَهَا",
      "bangla_trans": "আর মানুষ বলবে, এর কি হয়েছে?",
      "word_by_word": {
        "1": {
          "words_ar": "وَقَالَ",
          "translate_bn": "এবং বলবে"
        },
        "2": {
          "words_ar": "الْإِنْسَانُ",
          "translate_bn": "মানুষ"
        },
        "3": {
          "words_ar": "مَا",
          "translate_bn": "কি"
        },
        "4": {
          "words_ar": "لَهَا",
          "translate_bn": "হয়েছে তার"
        }
      },
      "english_trans": "And man says: What has befallen her?"
    },
    "4": {
      "arabic_text": "يَوْمَئِذٍ تُحَدِّثُ أَخْبَارَهَا",
      "bangla_trans": "সেদিন সে তার নিজের (ওপর যা কিছু ঘটেছে সেই) সব অবস্থা বর্ণনা করবে।",
      "word_by_word": {
        "1": {
          "words_ar": "يَوْمَئِذٍ",
          "translate_bn": "সেদিন"
        },
        "2": {
          "words_ar": "تُحَدِّثُ",
          "translate_bn": "সে বর্ণনা করবে"
        },
        "3": {
          "words_ar": "أَخْبَارَهَا",
          "translate_bn": "তার বৃত্তান্ত"
        }
      },
      "english_trans": "On that day she shall tell her news,"
    },
    "5": {
      "arabic_text": "بِأَنَّ رَبَّكَ أَوْحَى لَهَا",
      "bangla_trans": "কারণ তোমার রব তাকে (এমটি করার) হুকুম দিয়ে থাকবেন।",
      "word_by_word": {
        "1": {
          "words_ar": "بِأَنَّ",
          "translate_bn": "কেননা"
        },
        "2": {
          "words_ar": "رَبَّكَ",
          "translate_bn": "তোমার রব"
        },
        "3": {
          "words_ar": "أَوْحَىٰ",
          "translate_bn": "আদেশ করবেন (এইরূপ করার)"
        },
        "4": {
          "words_ar": "لَهَا",
          "translate_bn": "তাকে"
        }
      },
      "english_trans": "Because your Lord had inspired her."
    },
    "6": {
      "arabic_text": "يَوْمَئِذٍ يَصْدُرُ النَّاسُ أَشْتَاتًا لِيُرَوْا أَعْمَالَهُمْ",
      "bangla_trans": "সেদিন লোকেরা ভিন্ন ভিন্ন অবস্থায় ফিরে আসবে, যাতে তাদের কৃতকর্ম তাদেরকে দেখানো যায়।",
      "word_by_word": {
        "1": {
          "words_ar": "يَوْمَئِذٍ",
          "translate_bn": "সেদিন"
        },
        "2": {
          "words_ar": "يَصْدُرُ",
          "translate_bn": "বের হবে"
        },
        "3": {
          "words_ar": "النَّاسُ",
          "translate_bn": "মানুষ"
        },
        "4": {
          "words_ar": "أَشْتَاتًا",
          "translate_bn": "দলে দলে ভাগ হয়ে"
        },
        "5": {
          "words_ar": "لِيُرَوْا",
          "translate_bn": "দেখানোর জন্য"
        },
        "6": {
          "words_ar": "أَعْمَالَهُمْ",
          "translate_bn": "তাদের কৃতকর্মকে"
        }
      },
      "english_trans": "On that day men shall come forth in sundry bodies that they may be shown their works."
    },
    "7": {
      "arabic_text": "فَمَنْ يَعْمَلْ مِثْقَالَ ذَرَّةٍ خَيْرًا يَرَهُ",
      "bangla_trans": "তারপর যে অতি অল্প পরিমাণ ভালোকাজ করবে সে তা দেখে নেবে",
      "word_by_word": {
        "1": {
          "words_ar": "فَمَنْ",
          "translate_bn": "অতঃপর যে"
        },
        "2": {
          "words_ar": "يَعْمَلْ",
          "translate_bn": "করবে"
        },
        "3": {
          "words_ar": "مِثْقَالَ",
          "translate_bn": "পরিমাণ"
        },
        "4": {
          "words_ar": "ذَرَّةٍ",
          "translate_bn": "অণু"
        },
        "5": {
          "words_ar": "خَيْرًا",
          "translate_bn": "সৎকর্ম"
        },
        "6": {
          "words_ar": "يَرَهُ",
          "translate_bn": "সে তা দেখবে"
        }
      },
      "english_trans": "So. he who has done an atom´s weight of good shall see it"
    },
    "8": {
      "arabic_text": "وَمَنْ يَعْمَلْ مِثْقَالَ ذَرَّةٍ شَرًّا يَرَهُ",
      "bangla_trans": "এবং যে অতি অল্প পরিমাণ খারাপ কাজ করবে সে তা দেখে নেবে।",
      "word_by_word": {
        "1": {
          "words_ar": "وَمَنْ",
          "translate_bn": "এবং যে"
        },
        "2": {
          "words_ar": "يَعْمَلْ",
          "translate_bn": "করবে"
        },
        "3": {
          "words_ar": "مِثْقَالَ",
          "translate_bn": "পরিমাণ"
        },
        "4": {
          "words_ar": "ذَرَّةٍ",
          "translate_bn": "অণু"
        },
        "5": {
          "words_ar": "شَرًّا",
          "translate_bn": "অসৎকর্ম"
        },
        "6": {
          "words_ar": "يَرَهُ",
          "translate_bn": "সে তা দেখবে"
        }
      },
      "english_trans": "And he who has done an atom´s weight of evil shall see it."
    }
  }
}